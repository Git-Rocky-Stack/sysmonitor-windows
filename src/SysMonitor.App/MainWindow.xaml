<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SysMonitor.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SysMonitor.App"
    xmlns:views="using:SysMonitor.App.Views"
    Title="SysMonitor - Windows System Monitor &amp; Optimizer">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar - AMOLED Pure Black -->
        <Grid x:Name="AppTitleBar" Grid.Row="0" Height="68"
              Background="#000000">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Brand Text Header Logo -->
            <Image Grid.Column="0" Source="ms-appx:///Assets/Header_Main1.png"
                   Height="24" Margin="16,0,0,0" VerticalAlignment="Center"
                   Stretch="Uniform"/>

            <!-- SYSTEM MONITOR text -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                <TextBlock Text="SYSTEM MONITOR" FontSize="14" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           CharacterSpacing="100" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Tagline on right -->
            <TextBlock Grid.Column="2" Text="Strategic. Excellence. Engineered."
                       FontSize="10" Foreground="#AAFFFFFF"
                       VerticalAlignment="Center" Margin="0,0,16,0"/>
        </Grid>

        <!-- Navigation View -->
        <NavigationView x:Name="NavView" Grid.Row="1"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="True"
                        PaneDisplayMode="Left"
                        Background="{StaticResource BackgroundBrush}"
                        SelectionChanged="NavView_SelectionChanged">

            <NavigationView.Resources>
                <!-- Customize NavigationView colors for dark theme -->
                <SolidColorBrush x:Key="NavigationViewContentBackground" Color="#000000"/>
                <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="#121212"/>
                <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="#121212"/>
            </NavigationView.Resources>

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" Tag="Dashboard">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE80F;" Foreground="{StaticResource PrimaryBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="CPU Monitor" Tag="CpuMonitor">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE950;" Foreground="{StaticResource PrimaryBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="GPU Monitor" Tag="GpuMonitor">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7F4;" Foreground="{StaticResource PrimaryBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Memory Monitor" Tag="MemoryMonitor">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE964;" Foreground="{StaticResource PrimaryBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Processes" Tag="Processes">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8A5;" Foreground="{StaticResource PrimaryBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Cleaner" Tag="Cleaner">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE74D;" Foreground="{StaticResource PrimaryBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Startup" Tag="Startup">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7E8;" Foreground="{StaticResource PrimaryBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator/>
                <NavigationViewItem Content="Disk Analyzer" Tag="DiskAnalyzer">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEDA2;" Foreground="{StaticResource PrimaryBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Network" Tag="Network">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE774;" Foreground="{StaticResource PrimaryBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Battery" Tag="Battery">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE83F;" Foreground="{StaticResource PrimaryBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Temperature" Tag="Temperature">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE9CA;" Foreground="{StaticResource PrimaryBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="System Info" Tag="SystemInfo">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7F4;" Foreground="{StaticResource PrimaryBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator/>
                <NavigationViewItemHeader Content="UTILITIES"/>
                <NavigationViewItem Content="Large Files" Tag="LargeFiles">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7B8;" Foreground="{StaticResource CyanAccentBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Duplicate Finder" Tag="DuplicateFinder">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8C8;" Foreground="{StaticResource CyanAccentBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="File Tools" Tag="FileTools">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8B7;" Foreground="{StaticResource CyanAccentBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="PDF Tools" Tag="PdfTools">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEA90;" Foreground="{StaticResource CyanAccentBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Image Tools" Tag="ImageTools">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEB9F;" Foreground="{StaticResource CyanAccentBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator/>
                <NavigationViewItemHeader Content="WIRELESS"/>
                <NavigationViewItem Content="Bluetooth" Tag="Bluetooth">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE702;" Foreground="{StaticResource CyanAccentBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="WiFi Analyzer" Tag="WiFi">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE701;" Foreground="{StaticResource CyanAccentBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Network Mapper" Tag="NetworkMapper">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE968;" Foreground="{StaticResource CyanAccentBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame" Padding="24" Background="{StaticResource BackgroundBrush}"/>
        </NavigationView>
    </Grid>
</Window>
