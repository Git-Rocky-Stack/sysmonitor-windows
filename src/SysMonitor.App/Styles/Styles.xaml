<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Card Style (Info cards) - matches Android app panels -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- Elevated Card Style -->
    <Style x:Key="ElevatedCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ElevatedSurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- Red Card Style (Menu/Action items) - matches Android menu cards -->
    <Style x:Key="RedCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource RedCardGradientBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryLightBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- Stat Card Style -->
    <Style x:Key="StatCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="MinHeight" Value="100"/>
    </Style>

    <!-- Header Banner Style -->
    <Style x:Key="HeaderBannerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource HeaderGradientBrush}"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="Margin" Value="-24,-24,-24,24"/>
    </Style>

    <!-- Icon Container Style (Dark rounded square - for info items) -->
    <Style x:Key="IconContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource IconContainerBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <!-- Icon Container Red Style (for menu cards - circular like Android) -->
    <Style x:Key="IconContainerRedStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource IconContainerBrush}"/>
        <Setter Property="CornerRadius" Value="24"/>
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <!-- Menu Card Icon Style (dark circle with icon like Android menu items) -->
    <Style x:Key="MenuCardIconStyle" TargetType="Border">
        <Setter Property="Background" Value="#2A2A2A"/>
        <Setter Property="CornerRadius" Value="24"/>
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Padding" Value="12"/>
    </Style>

    <!-- Large Icon Container (for dashboard/hero sections) -->
    <Style x:Key="LargeIconContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource IconContainerBrush}"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Width" Value="64"/>
        <Setter Property="Height" Value="64"/>
        <Setter Property="Padding" Value="14"/>
    </Style>

    <!-- Page Header Style -->
    <Style x:Key="PageHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="CharacterSpacing" Value="50"/>
    </Style>

    <!-- Page Subtitle Style -->
    <Style x:Key="PageSubtitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <!-- Section Header Style (with red accent bar) -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="Margin" Value="12,0,0,12"/>
        <Setter Property="CharacterSpacing" Value="100"/>
    </Style>

    <!-- Section Header with Accent Bar -->
    <Style x:Key="SectionHeaderWithAccentStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,16,0,12"/>
    </Style>

    <!-- Accent Bar -->
    <Style x:Key="AccentBarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Width" Value="4"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <!-- Stat Value Style -->
    <Style x:Key="StatValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- Large Stat Value Style (for hero numbers) -->
    <Style x:Key="LargeStatValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="64"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
    </Style>

    <!-- Stat Label Style -->
    <Style x:Key="StatLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="CharacterSpacing" Value="50"/>
    </Style>

    <!-- Card Title Style -->
    <Style x:Key="CardTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- Card Subtitle Style -->
    <Style x:Key="CardSubtitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <!-- Menu Item Text Style -->
    <Style x:Key="MenuItemTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- Menu Item Subtitle Style -->
    <Style x:Key="MenuItemSubtitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#CCFFFFFF"/>
    </Style>

    <!-- Red Button Style (Pill-shaped like Android app) -->
    <Style x:Key="RedButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="24"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Outlined Button Style (Pill-shaped) -->
    <Style x:Key="OutlinedButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="24"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Export Button Style (for JSON, CSV, PDF buttons like Android) -->
    <Style x:Key="ExportButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="24"/>
        <Setter Property="Padding" Value="32,12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="MinWidth" Value="100"/>
    </Style>

    <!-- Status Text Styles -->
    <Style x:Key="StatusGoodStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="StatusWarningStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="StatusErrorStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Progress Bar Styles -->
    <Style x:Key="RedProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Background" Value="{StaticResource ProgressTrackBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Height" Value="8"/>
    </Style>

    <Style x:Key="GreenProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="Background" Value="{StaticResource ProgressTrackBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Height" Value="8"/>
    </Style>

    <Style x:Key="CyanProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Foreground" Value="{StaticResource CyanAccentBrush}"/>
        <Setter Property="Background" Value="{StaticResource ProgressTrackBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Height" Value="8"/>
    </Style>

    <Style x:Key="ThinProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Background" Value="{StaticResource ProgressTrackBrush}"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Height" Value="4"/>
    </Style>

    <!-- ==================== CHROME BEZEL BUTTON STYLES ==================== -->
    <!-- Primary Chrome Bezel Button (matches Android app's premium button style) -->
    <!-- WinUI 3 implementation using nested borders for the 4-layer chrome effect -->

    <!-- Chrome Bezel Primary Button - Outer bezel wrapper -->
    <Style x:Key="ChromeBezelButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ChromeBezelLayer1Brush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="3"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Secondary Chrome Bezel Button (outline style with red border) -->
    <Style x:Key="ChromeBezelSecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ChromeBezelLayer1Brush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="3"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Input Field Style (matching Android) -->
    <Style x:Key="InputFieldStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource DividerBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,10"/>
    </Style>

    <!-- Badge Styles -->
    <Style x:Key="BadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style x:Key="BadgeSuccessStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style x:Key="BadgeWarningStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style x:Key="BadgeErrorStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style x:Key="BadgeTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- Divider Styles -->
    <Style x:Key="HorizontalDividerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DividerBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,16"/>
    </Style>

    <Style x:Key="VerticalDividerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DividerBrush}"/>
        <Setter Property="Width" Value="1"/>
        <Setter Property="Margin" Value="16,0"/>
    </Style>
</ResourceDictionary>
