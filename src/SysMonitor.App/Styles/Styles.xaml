    <!-- Circular Gauge Progress Style - Cyan arc -->
    <Style x:Key="GaugeProgressCyanStyle" TargetType="Ellipse">
        <Setter Property="Stroke" Value="{StaticResource CyanAccentBrush}"/>
        <Setter Property="StrokeThickness" Value="6"/>
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="StrokeDashCap" Value="Round"/>
