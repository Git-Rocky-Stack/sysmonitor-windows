    <!-- Red Accent Line - For section headers -->
    <Style x:Key="RedAccentLineStyle" TargetType="Border">
        <Setter Property="Height" Value="3"/>
        <Setter Property="CornerRadius" Value="1.5"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#AA2024" Offset="0"/>
                    <GradientStop Color="#D4383C" Offset="0.5"/>
                    <GradientStop Color="#AA2024" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== CHROME BEZEL BUTTON STYLES ==================== -->
    <!-- Primary Chrome Bezel Button (matches Android app's premium button style) -->
    <!-- WinUI 3 implementation using nested borders for the 4-layer chrome effect -->

    <!-- Chrome Bezel Primary Button - Outer bezel wrapper -->
    <Style x:Key="ChromeBezelButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ChromeBezelLayer1Brush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="3"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Secondary Chrome Bezel Button (outline style with red border) -->
    <Style x:Key="ChromeBezelSecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ChromeBezelLayer1Brush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="3"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Input Field Style (matching Android) -->
    <Style x:Key="InputFieldStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource DividerBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,10"/>
    </Style>

    <!-- Search TextBox Style (for search fields with icon placeholder) -->
    <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource DividerBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="PlaceholderForeground" Value="{StaticResource TextTertiaryBrush}"/>
    </Style>

    <!-- Badge Styles -->
    <Style x:Key="BadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style x:Key="BadgeSuccessStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style x:Key="BadgeWarningStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style x:Key="BadgeErrorStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style x:Key="BadgeTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- Divider Styles -->
    <Style x:Key="HorizontalDividerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DividerBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,16"/>
    </Style>

    <Style x:Key="VerticalDividerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DividerBrush}"/>
        <Setter Property="Width" Value="1"/>
        <Setter Property="Margin" Value="16,0"/>
    </Style>
</ResourceDictionary>
