<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Strategia-X Brand Colors (matching Android app exactly) -->
    <Color x:Key="PrimaryColor">#AA2024</Color>
    <Color x:Key="PrimaryDarkColor">#8A1A1D</Color>
    <Color x:Key="PrimaryLightColor">#C93437</Color>
    <Color x:Key="SecondaryColor">#8A1A1D</Color>
    <Color x:Key="AccentColor">#FF7043</Color>

    <!-- Background Colors (AMOLED Dark Theme) -->
    <Color x:Key="BackgroundColor">#000000</Color>
    <Color x:Key="BackgroundSecondaryColor">#0F0F0F</Color>
    <Color x:Key="SurfaceColor">#121212</Color>
    <Color x:Key="CardColor">#1A1A1A</Color>
    <Color x:Key="CardBorderColor">#333333</Color>
    <Color x:Key="ElevatedSurfaceColor">#252525</Color>
    <Color x:Key="SurfaceLightColor">#2A2A2A</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#B3B3B3</Color>
    <Color x:Key="TextTertiaryColor">#808080</Color>
    <Color x:Key="TextDisabledColor">#4D4D4D</Color>

    <!-- Brand Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource CardBorderColor}"/>
    <SolidColorBrush x:Key="ElevatedSurfaceBrush" Color="{StaticResource ElevatedSurfaceColor}"/>

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>

    <!-- Header Gradient (135° angle - matching Android) -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#AA2024" Offset="0.0"/>
        <GradientStop Color="#FF5252" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Red Card Gradient (for menu items) -->
    <LinearGradientBrush x:Key="RedCardGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#AA2024" Offset="0.0"/>
        <GradientStop Color="#C93437" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Primary Button Gradient (90° vertical) -->
    <LinearGradientBrush x:Key="PrimaryButtonGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#AA2024" Offset="0.0"/>
        <GradientStop Color="#C93437" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Chrome Bezel Layer 1 - Outer Chrome -->
    <LinearGradientBrush x:Key="ChromeBezelLayer1Brush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E8E8E8" Offset="0.0"/>
        <GradientStop Color="#A0A0A0" Offset="0.5"/>
        <GradientStop Color="#606060" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Chrome Bezel Layer 2 - Inner Highlight -->
    <LinearGradientBrush x:Key="ChromeBezelLayer2Brush" StartPoint="1,1" EndPoint="0,0">
        <GradientStop Color="#FFFFFF" Offset="0.0"/>
        <GradientStop Color="#C8C8C8" Offset="0.5"/>
        <GradientStop Color="#888888" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Chrome Bezel Layer 3 - Dark Edge -->
    <LinearGradientBrush x:Key="ChromeBezelLayer3Brush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#505050" Offset="0.0"/>
        <GradientStop Color="#383838" Offset="0.5"/>
        <GradientStop Color="#282828" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Status Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>

    <!-- Chart/Data Accent Colors (matching Android app) -->
    <Color x:Key="CyanAccentColor">#00BCD4</Color>
    <Color x:Key="TealAccentColor">#009688</Color>
    <Color x:Key="GoldAccentColor">#FFD700</Color>
    <SolidColorBrush x:Key="CyanAccentBrush" Color="{StaticResource CyanAccentColor}"/>
    <SolidColorBrush x:Key="TealAccentBrush" Color="{StaticResource TealAccentColor}"/>
    <SolidColorBrush x:Key="GoldAccentBrush" Color="{StaticResource GoldAccentColor}"/>
    <SolidColorBrush x:Key="ChartLineBrush" Color="#00BCD4"/>

    <!-- Health Score Brushes -->
    <SolidColorBrush x:Key="HealthExcellentBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="HealthGoodBrush" Color="#8BC34A"/>
    <SolidColorBrush x:Key="HealthFairBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="HealthPoorBrush" Color="#F44336"/>

    <!-- Icon Container Brushes -->
    <SolidColorBrush x:Key="IconContainerBrush" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="IconContainerRedBrush" Color="#AA2024"/>

    <!-- Additional Accent Brushes (matching Android palette) -->
    <SolidColorBrush x:Key="AccentBlueBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="AccentGreenBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="#9C27B0"/>
    <SolidColorBrush x:Key="AccentTealBrush" Color="#00BCD4"/>

    <!-- Divider Brushes -->
    <SolidColorBrush x:Key="DividerBrush" Color="#333333"/>
    <SolidColorBrush x:Key="DividerSubtleBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="DividerStrongBrush" Color="#4D4D4D"/>

    <!-- Progress Bar Track -->
    <SolidColorBrush x:Key="ProgressTrackBrush" Color="#2A2A2A"/>
</ResourceDictionary>
