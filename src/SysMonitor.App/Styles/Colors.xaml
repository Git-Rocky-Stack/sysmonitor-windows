<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Brand Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#00B294"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#FFB900"/>

    <!-- Status Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#0078D4"/>

    <!-- Health Score Brushes -->
    <SolidColorBrush x:Key="HealthExcellentBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="HealthGoodBrush" Color="#00B294"/>
    <SolidColorBrush x:Key="HealthFairBrush" Color="#FFB900"/>
    <SolidColorBrush x:Key="HealthPoorBrush" Color="#D13438"/>
</ResourceDictionary>
