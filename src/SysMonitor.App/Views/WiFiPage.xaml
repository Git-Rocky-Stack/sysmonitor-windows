<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.WiFiPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SysMonitor.App.Views"
    xmlns:vm="using:SysMonitor.App.ViewModels"
    Background="{StaticResource BackgroundBrush}">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header Banner - AMOLED pure black with left header, centered logo -->
        <Border Grid.Row="0" Background="#000000" Padding="24" Margin="-24,-24,-24,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Header text -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="WIFI ANALYZER" Style="{StaticResource PageHeaderStyle}"
                               Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                    <TextBlock Text="Scan &amp; Analyze WiFi Networks" Style="{StaticResource PageSubtitleStyle}"
                               Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                </StackPanel>

                <!-- Center: STX.1 Home Logo -->
                <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                       Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"
                       Stretch="Uniform"/>

                <!-- Right: Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- SCAN with chrome bezel -->
                    <Border CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Command="{x:Bind ViewModel.ScanNetworksCommand}" IsEnabled="{x:Bind ViewModel.IsAvailable, Mode=OneWay}"
                                Style="{StaticResource RedButtonStyle}" Background="#000000">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                <TextBlock Text="SCAN"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Button Command="{x:Bind ViewModel.StopScanCommand}"
                            Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                            Style="{StaticResource OutlinedButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE71A;" FontSize="14"/>
                            <TextBlock Text="STOP"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16" Margin="0,0,0,16">

                <!-- Adapter & Connection Section -->
                <StackPanel Spacing="8">
                    <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                        <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                        <TextBlock Text="CONNECTION STATUS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                    </StackPanel>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Adapter Info -->
                        <Border Style="{StaticResource CardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource IconContainerRedStyle}" Margin="0,0,16,0">
                                    <FontIcon Glyph="&#xE701;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind ViewModel.AdapterName, Mode=OneWay}" Style="{StaticResource CardTitleStyle}" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{x:Bind ViewModel.MacAddress, Mode=OneWay}" Style="{StaticResource CardSubtitleStyle}" Margin="0,4,0,0"/>
                                </StackPanel>

                                <Border Grid.Column="2" Background="{x:Bind ViewModel.AdapterStatusColor, Mode=OneWay, Converter={StaticResource StringToBrushConverter}}"
                                        CornerRadius="4" Padding="12,6" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind ViewModel.AdapterStatus, Mode=OneWay}" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Current Connection -->
                        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Connected To" Style="{StaticResource CardSubtitleStyle}"/>
                                    <TextBlock Text="{x:Bind ViewModel.ConnectedNetwork, Mode=OneWay}" Style="{StaticResource CardTitleStyle}" Margin="0,4,0,0" TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,4,0,0"
                                                Visibility="{x:Bind ViewModel.IsConnected, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{x:Bind ViewModel.ConnectionChannel, Mode=OneWay}" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}"/>
                                        <TextBlock Text="{x:Bind ViewModel.ConnectionSpeed, Mode=OneWay}" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                            Visibility="{x:Bind ViewModel.IsConnected, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                                               Foreground="{x:Bind ViewModel.ConnectionStatusColor, Mode=OneWay, Converter={StaticResource StringToBrushConverter}}">
                                        <Run Text="{x:Bind ViewModel.ConnectionSignal, Mode=OneWay}"/><Run Text="%"/>
                                    </TextBlock>
                                    <TextBlock Text="Signal" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- Stats Section -->
                <StackPanel Spacing="8">
                    <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                        <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                        <TextBlock Text="NETWORK STATISTICS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                    </StackPanel>

                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Networks" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.NetworksFound, Mode=OneWay}" FontSize="28" FontWeight="Bold" Foreground="#00BCD4" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Secure" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.SecureNetworks, Mode=OneWay}" FontSize="28" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Open" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.OpenNetworks, Mode=OneWay}" FontSize="28" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="2.4 GHz" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.Networks24GHz, Mode=OneWay}" FontSize="28" FontWeight="Bold" Foreground="#9C27B0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="5 GHz" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.Networks5GHz, Mode=OneWay}" FontSize="28" FontWeight="Bold" Foreground="#2196F3" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- Scan Status -->
                <Border Style="{StaticResource CardStyle}" Padding="12" Background="#1A1A1A"
                        Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <ProgressRing IsActive="True" Width="20" Height="20"/>
                        <TextBlock Text="{x:Bind ViewModel.ScanStatus, Mode=OneWay}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Networks List Section -->
                <StackPanel Spacing="8">
                    <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                        <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                        <TextBlock Text="AVAILABLE NETWORKS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                    </StackPanel>

                    <Border Style="{StaticResource CardStyle}" Padding="0" MinHeight="350">
                        <Grid>
                            <ListView ItemsSource="{x:Bind ViewModel.Networks, Mode=OneWay}"
                                      Background="Transparent" SelectionMode="None">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="12"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="vm:WiFiNetworkDisplay">
                                        <Border Background="#141414" CornerRadius="6" Padding="16">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Signal Icon -->
                                                <Border Style="{StaticResource IconContainerStyle}" Width="48" Height="48" VerticalAlignment="Center">
                                                    <FontIcon Glyph="{x:Bind SignalIcon}" Foreground="{x:Bind SignalColor, Converter={StaticResource StringToBrushConverter}}" FontSize="20"/>
                                                </Border>

                                                <!-- Network Info -->
                                                <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <TextBlock Text="{x:Bind Ssid}" Style="{StaticResource CardTitleStyle}"/>
                                                        <FontIcon Glyph="{x:Bind SecurityIcon}" Foreground="{x:Bind SecurityColor, Converter={StaticResource StringToBrushConverter}}" FontSize="12" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <TextBlock Style="{StaticResource CardSubtitleStyle}" Margin="0,2,0,0">
                                                        <Run Text="{x:Bind Security}"/> - <Run Text="{x:Bind Band}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{x:Bind Bssid}" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <!-- Channel -->
                                                <StackPanel Grid.Column="2" Margin="16,0" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="60">
                                                    <TextBlock Text="Channel" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{x:Bind Channel}" FontSize="16" FontWeight="Bold" Foreground="#9C27B0" HorizontalAlignment="Center"/>
                                                </StackPanel>

                                                <!-- Frequency -->
                                                <StackPanel Grid.Column="3" Margin="16,0" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="80">
                                                    <TextBlock Text="Frequency" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{x:Bind Frequency}" FontSize="12" FontWeight="SemiBold" Foreground="#2196F3" HorizontalAlignment="Center"/>
                                                </StackPanel>

                                                <!-- Signal Strength -->
                                                <StackPanel Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="60">
                                                    <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"
                                                               Foreground="{x:Bind SignalColor, Converter={StaticResource StringToBrushConverter}}">
                                                        <Run Text="{x:Bind SignalStrength}"/><Run Text="%" FontSize="12"/>
                                                    </TextBlock>
                                                    <ProgressBar Value="{x:Bind SignalStrength}" Maximum="100" Width="50" Height="4" Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- Empty State -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Visibility="{x:Bind ViewModel.NetworksFound, Mode=OneWay, Converter={StaticResource ZeroToVisibilityConverter}}">
                                <FontIcon Glyph="&#xE701;" FontSize="48" Foreground="#404040"/>
                                <TextBlock Text="No WiFi networks found" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,12,0,0"/>
                                <TextBlock Text="Click 'SCAN' to search for available networks" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
