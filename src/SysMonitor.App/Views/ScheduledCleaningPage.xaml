<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.ScheduledCleaningPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}"
    Loaded="Page_Loaded">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Header Banner -->
        <Border Grid.Row="0" Background="#000000" Padding="24" Margin="-24,-24,-24,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="SCHEDULED CLEANING" Style="{StaticResource PageHeaderStyle}"
                               Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                    <TextBlock Text="Automate System Maintenance Tasks" Style="{StaticResource PageSubtitleStyle}"
                               Foreground="#AAFFFFFF" HorizontalAlignment="Left"/>
                </StackPanel>

                <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                       Height="80" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform"/>
            </Grid>
        </Border>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="16" Padding="0,0,16,0">

                <!-- Enable/Disable Card -->
                <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                    <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                    <TextBlock Text="SCHEDULE STATUS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                </StackPanel>

                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource IconContainerRedStyle}" Margin="0,0,16,0">
                            <FontIcon Glyph="&#xE823;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Automatic Scheduled Cleaning" Style="{StaticResource CardTitleStyle}"/>
                            <StackPanel Orientation="Horizontal" Spacing="24" Margin="0,4,0,0">
                                <TextBlock Style="{StaticResource CardSubtitleStyle}">
                                    <Run Text="Next run: "/>
                                    <Run Text="{x:Bind ViewModel.NextRunTime, Mode=OneWay}" Foreground="{StaticResource SuccessBrush}"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource CardSubtitleStyle}">
                                    <Run Text="Last run: "/>
                                    <Run Text="{x:Bind ViewModel.LastRunTime, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <ToggleSwitch Grid.Column="2" IsOn="{x:Bind ViewModel.IsEnabled, Mode=TwoWay}"
                                      OnContent="Enabled" OffContent="Disabled"/>
                    </Grid>
                </Border>

                <!-- Schedule Settings -->
                <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                    <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                    <TextBlock Text="SCHEDULE SETTINGS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                </StackPanel>

                <Border Style="{StaticResource CardStyle}" Padding="16">
                    <StackPanel Spacing="16">
                        <!-- Schedule Type -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Schedule Type:" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <ComboBox Grid.Column="1" ItemsSource="{x:Bind ViewModel.ScheduleOptions}"
                                      SelectedValue="{x:Bind ViewModel.SelectedSchedule, Mode=TwoWay}"
                                      SelectedValuePath="Schedule" DisplayMemberPath="Name"
                                      HorizontalAlignment="Stretch"/>
                        </Grid>

                        <!-- Day of Week (for Weekly) -->
                        <Grid Visibility="{x:Bind ViewModel.SelectedSchedule, Mode=OneWay, Converter={StaticResource ScheduleToVisibilityConverter}, ConverterParameter=Weekly}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Day of Week:" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <ComboBox Grid.Column="1" ItemsSource="{x:Bind ViewModel.DaysOfWeek}"
                                      SelectedItem="{x:Bind ViewModel.SelectedDayOfWeek, Mode=TwoWay}"
                                      HorizontalAlignment="Stretch"/>
                        </Grid>

                        <!-- Day of Month (for Monthly) -->
                        <Grid Visibility="{x:Bind ViewModel.SelectedSchedule, Mode=OneWay, Converter={StaticResource ScheduleToVisibilityConverter}, ConverterParameter=Monthly}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Day of Month:" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <ComboBox Grid.Column="1" ItemsSource="{x:Bind ViewModel.DaysOfMonth}"
                                      SelectedItem="{x:Bind ViewModel.SelectedDayOfMonth, Mode=TwoWay}"
                                      HorizontalAlignment="Stretch"/>
                        </Grid>

                        <!-- Time -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Time:" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <ComboBox Grid.Column="1" ItemsSource="{x:Bind ViewModel.Hours}"
                                      SelectedItem="{x:Bind ViewModel.SelectedHour, Mode=TwoWay}"
                                      Width="80"/>
                            <TextBlock Grid.Column="2" Text=":" VerticalAlignment="Center" Margin="8,0"/>
                            <ComboBox Grid.Column="3" ItemsSource="{x:Bind ViewModel.Minutes}"
                                      SelectedItem="{x:Bind ViewModel.SelectedMinute, Mode=TwoWay}"
                                      Width="80"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- What to Clean -->
                <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                    <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                    <TextBlock Text="WHAT TO CLEAN" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                </StackPanel>

                <Border Style="{StaticResource CardStyle}" Padding="16">
                    <StackPanel Spacing="12">
                        <CheckBox Content="Temporary Files" IsChecked="{x:Bind ViewModel.CleanTempFiles, Mode=TwoWay}"/>
                        <CheckBox Content="Browser Cache" IsChecked="{x:Bind ViewModel.CleanBrowserCache, Mode=TwoWay}"/>
                        <CheckBox Content="Recycle Bin" IsChecked="{x:Bind ViewModel.CleanRecycleBin, Mode=TwoWay}"/>
                        <CheckBox Content="Windows Update Cache" IsChecked="{x:Bind ViewModel.CleanWindowsUpdateCache, Mode=TwoWay}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="May require administrator privileges"/>
                            </ToolTipService.ToolTip>
                        </CheckBox>
                        <CheckBox Content="Thumbnail Cache" IsChecked="{x:Bind ViewModel.CleanThumbnailCache, Mode=TwoWay}"/>
                    </StackPanel>
                </Border>

                <!-- Options -->
                <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                    <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                    <TextBlock Text="OPTIONS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                </StackPanel>

                <Border Style="{StaticResource CardStyle}" Padding="16">
                    <StackPanel Spacing="12">
                        <CheckBox Content="Show notification when cleaning completes"
                                  IsChecked="{x:Bind ViewModel.ShowNotification, Mode=TwoWay}"/>
                        <CheckBox Content="Only run when system is idle"
                                  IsChecked="{x:Bind ViewModel.OnlyWhenIdle, Mode=TwoWay}"/>
                        <CheckBox Content="Wake computer to run scheduled task"
                                  IsChecked="{x:Bind ViewModel.WakeToRun, Mode=TwoWay}"/>
                        <CheckBox Content="Run missed schedule as soon as possible"
                                  IsChecked="{x:Bind ViewModel.RunMissedSchedule, Mode=TwoWay}"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Action Bar -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="16">
            <Grid>
                <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                           Style="{StaticResource CardSubtitleStyle}" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                    <Button Content="Delete Task" Command="{x:Bind ViewModel.DeleteTaskCommand}"
                            Style="{StaticResource OutlinedButtonStyle}"
                            IsEnabled="{x:Bind ViewModel.TaskExists, Mode=OneWay}"/>
                    <Button Content="Refresh" Command="{x:Bind ViewModel.RefreshStatusCommand}"
                            Style="{StaticResource OutlinedButtonStyle}"/>
                    <Border CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Content="SAVE SETTINGS" Command="{x:Bind ViewModel.SaveCommand}"
                                Style="{StaticResource RedButtonStyle}"
                                IsEnabled="{x:Bind ViewModel.IsSaving, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" Background="#80000000"
              Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressRing IsActive="True" Width="48" Height="48"/>
                <TextBlock Text="Loading settings..." Margin="0,16,0,0"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
