<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.InstalledProgramsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="ContentArea"
    Background="{StaticResource BackgroundBrush}">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Header Banner -->
        <Border Grid.Row="0" Background="#000000" Padding="24" Margin="-24,-24,-24,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Header text -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="INSTALLED PROGRAMS" Style="{StaticResource PageHeaderStyle}"
                               Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                    <TextBlock Text="View &amp; Manage All Installed Applications" Style="{StaticResource PageSubtitleStyle}"
                               Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                </StackPanel>

                <!-- Center: STX.1 Home Logo -->
                <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                       Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"
                       Stretch="Uniform"/>
            </Grid>
        </Border>

        <!-- Controls Section -->
        <StackPanel Grid.Row="1" Spacing="12">
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="PROGRAM CONTROLS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Status and Refresh Card -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource IconContainerStyle}" Margin="0,0,16,0">
                        <FontIcon Glyph="&#xE74C;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                                   Style="{StaticResource CardTitleStyle}"/>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                            <TextBlock Text="Programs:" Style="{StaticResource CardSubtitleStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.TotalCount, Mode=OneWay}"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock Text="| Size:" Style="{StaticResource CardSubtitleStyle}" Margin="8,0,0,0"/>
                            <TextBlock Text="{x:Bind ViewModel.TotalSize, Mode=OneWay}"
                                       Foreground="{StaticResource WarningBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Refresh Button -->
                    <Border Grid.Column="2" CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Content="REFRESH"
                                Command="{x:Bind ViewModel.LoadProgramsCommand}"
                                Style="{StaticResource RedButtonStyle}"
                                IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"/>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Filters Section -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <TextBox Grid.Row="0" PlaceholderText="Search programs by name or publisher..."
                         Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource SearchTextBoxStyle}"/>

                <!-- Filter Toggles -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="24">
                    <CheckBox Content="Desktop Apps" IsChecked="{x:Bind ViewModel.ShowWin32Apps, Mode=TwoWay}"/>
                    <CheckBox Content="Store Apps" IsChecked="{x:Bind ViewModel.ShowStoreApps, Mode=TwoWay}"/>
                    <CheckBox Content="System Apps" IsChecked="{x:Bind ViewModel.ShowSystemApps, Mode=TwoWay}"/>
                    <CheckBox Content="Frameworks" IsChecked="{x:Bind ViewModel.ShowFrameworks, Mode=TwoWay}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Programs List -->
        <Grid Grid.Row="3" RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="INSTALLED PROGRAMS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.FilteredPrograms, Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedProgram, Mode=TwoWay}"
                      Background="Transparent" SelectionMode="Single">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0,4,0,4"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- App Icon -->
                                <Border Grid.Column="0" Style="{StaticResource IconContainerStyle}"
                                        Width="44" Height="44" Margin="0,0,12,0">
                                    <FontIcon Glyph="{Binding Icon}" FontSize="18"
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                </Border>

                                <!-- App Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                    <TextBlock Text="{Binding Name}" Style="{StaticResource CardTitleStyle}"
                                               TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding Publisher}" Style="{StaticResource CardSubtitleStyle}"
                                                   TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                                        <TextBlock Text="{Binding Version}" Style="{StaticResource CardSubtitleStyle}"
                                                   Foreground="#606060"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Type Badge -->
                                <Border Grid.Column="2" CornerRadius="4" Padding="8,4" Margin="8,0"
                                        VerticalAlignment="Center" Background="#30808080">
                                    <TextBlock Text="{Binding TypeDisplay}" FontSize="11" FontWeight="SemiBold"
                                               Foreground="{Binding TypeColor, Converter={StaticResource StringToBrushConverter}}"/>
                                </Border>

                                <!-- Size -->
                                <TextBlock Grid.Column="3" Text="{Binding FormattedSize}"
                                           VerticalAlignment="Center" Width="80" TextAlignment="Right"
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="8,0"/>

                                <!-- Actions -->
                                <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="4">
                                    <Button ToolTipService.ToolTip="Open Install Location"
                                            Command="{Binding DataContext.OpenInstallLocationCommand, ElementName=ContentArea}"
                                            CommandParameter="{Binding}"
                                            Padding="8" Background="Transparent">
                                        <FontIcon Glyph="&#xE838;" FontSize="14"/>
                                    </Button>
                                    <Button ToolTipService.ToolTip="Uninstall"
                                            Command="{Binding DataContext.UninstallProgramCommand, ElementName=ContentArea}"
                                            CommandParameter="{Binding}"
                                            Padding="8" Background="#30F44336"
                                            IsEnabled="{Binding CanUninstall}">
                                        <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="#F44336"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Loading/Progress -->
        <ProgressBar Grid.Row="4" IsIndeterminate="True"
                     Foreground="{StaticResource PrimaryBrush}"
                     Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</Page>
