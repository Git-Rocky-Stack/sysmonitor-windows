<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.CleanerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Header Banner -->
        <Border Grid.Row="0" Style="{StaticResource HeaderBannerStyle}">
            <StackPanel>
                <TextBlock Text="SYSTEM CLEANER" Style="{StaticResource PageHeaderStyle}"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="Remove Temporary Files &amp; Free Up Space" Style="{StaticResource PageSubtitleStyle}"
                           Foreground="#AAFFFFFF"/>
            </StackPanel>
        </Border>

        <!-- Status Card -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource IconContainerRedStyle}" Margin="0,0,16,0">
                    <FontIcon Glyph="&#xE74D;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                               Style="{StaticResource CardTitleStyle}"/>
                    <TextBlock Style="{StaticResource CardSubtitleStyle}" Margin="0,4,0,0">
                        <Run Text="Total: "/>
                        <Run Text="{x:Bind ViewModel.TotalSizeMB, Mode=OneWay}" Foreground="{StaticResource WarningBrush}"/>
                        <Run Text=" MB"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <Button Content="SCAN" Command="{x:Bind ViewModel.ScanCommand}"
                            Style="{StaticResource OutlinedButtonStyle}"
                            IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"/>
                    <Button Content="CLEAN SELECTED" Command="{x:Bind ViewModel.CleanCommand}"
                            Style="{StaticResource RedButtonStyle}"
                            IsEnabled="{x:Bind ViewModel.HasResults, Mode=OneWay}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Results List -->
        <ListView Grid.Row="2" ItemsSource="{x:Bind ViewModel.ScanResults, Mode=OneWay}"
                  Background="Transparent">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,4,0,4"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardStyle}" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      VerticalAlignment="Center"/>

                            <Border Grid.Column="1" Style="{StaticResource IconContainerStyle}"
                                    Width="40" Height="40" Margin="8,0,12,0">
                                <FontIcon Glyph="&#xE8B7;" FontSize="16" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" Style="{StaticResource CardTitleStyle}"/>
                                <TextBlock Text="{Binding Description}" Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>

                            <TextBlock Grid.Column="3" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="{Binding FileCount}"/>
                                <Run Text=" files"/>
                            </TextBlock>

                            <TextBlock Grid.Column="4" VerticalAlignment="Center"
                                       Foreground="{StaticResource WarningBrush}" FontWeight="SemiBold">
                                <Run Text="{Binding SizeMB}"/>
                                <Run Text=" MB"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ProgressBar Grid.Row="3" IsIndeterminate="True"
                     Foreground="{StaticResource PrimaryBrush}"
                     Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</Page>
