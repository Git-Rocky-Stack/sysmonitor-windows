<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.PlaceholderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border Style="{StaticResource CardStyle}" Padding="48">
            <StackPanel Spacing="16" HorizontalAlignment="Center">
                <Border Style="{StaticResource IconContainerRedStyle}" Width="80" Height="80"
                        HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE946;" FontSize="36" Foreground="{StaticResource TextPrimaryBrush}"/>
                </Border>
                <TextBlock Text="COMING SOON" FontSize="24" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"
                           CharacterSpacing="100"/>
                <TextBlock Text="This feature is under development"
                           Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                <TextBlock Text="Powered by Strategia-X Technology"
                           Foreground="{StaticResource PrimaryBrush}" FontSize="11"
                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
