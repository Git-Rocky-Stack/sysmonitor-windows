<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="16" Padding="0,0,0,24">

            <!-- Page Header Banner -->
            <Border Style="{StaticResource HeaderBannerStyle}">
                <StackPanel>
                    <TextBlock Text="SETTINGS" Style="{StaticResource PageHeaderStyle}"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Configure Application Preferences" Style="{StaticResource PageSubtitleStyle}"
                               Foreground="#AAFFFFFF"/>
                </StackPanel>
            </Border>

            <!-- Appearance Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="APPEARANCE" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerRedStyle}">
                            <FontIcon Glyph="&#xE790;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <ComboBox Header="Theme" SelectedIndex="{x:Bind ViewModel.SelectedThemeIndex, Mode=TwoWay}"
                                  Width="200" Background="{StaticResource SurfaceBrush}">
                            <ComboBoxItem Content="System Default"/>
                            <ComboBoxItem Content="Light"/>
                            <ComboBoxItem Content="Dark (Strategia-X)"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Behavior Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="BEHAVIOR" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Style="{StaticResource IconContainerStyle}" Margin="0,0,12,0">
                            <FontIcon Glyph="&#xE7E8;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <ToggleSwitch Grid.Column="1" Header="Run at Windows startup"
                                      IsOn="{x:Bind ViewModel.RunAtStartup, Mode=TwoWay}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Style="{StaticResource IconContainerStyle}" Margin="0,0,12,0">
                            <FontIcon Glyph="&#xE921;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <ToggleSwitch Grid.Column="1" Header="Minimize to system tray"
                                      IsOn="{x:Bind ViewModel.MinimizeToTray, Mode=TwoWay}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Style="{StaticResource IconContainerStyle}" Margin="0,0,12,0">
                            <FontIcon Glyph="&#xE7E7;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <ToggleSwitch Grid.Column="1" Header="Show notifications"
                                      IsOn="{x:Bind ViewModel.ShowNotifications, Mode=TwoWay}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Monitoring Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="MONITORING" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Style="{StaticResource IconContainerStyle}" Margin="0,0,12,0">
                            <FontIcon Glyph="&#xE916;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Refresh Interval" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                                <Slider Minimum="1" Maximum="10" Width="250"
                                        Value="{x:Bind ViewModel.RefreshInterval, Mode=TwoWay}"/>
                                <TextBlock VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}">
                                    <Run Text="{x:Bind ViewModel.RefreshInterval, Mode=OneWay}"/>
                                    <Run Text="seconds"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Style="{StaticResource IconContainerStyle}" Margin="0,0,12,0">
                            <FontIcon Glyph="&#xE964;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel Grid.Column="1">
                            <ToggleSwitch Header="Auto-optimize memory when usage exceeds threshold"
                                          IsOn="{x:Bind ViewModel.AutoOptimizeMemory, Mode=TwoWay}"/>
                            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0"
                                        Visibility="{x:Bind ViewModel.AutoOptimizeMemory, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Slider Minimum="50" Maximum="95" Width="250"
                                        Value="{x:Bind ViewModel.MemoryThreshold, Mode=TwoWay}"/>
                                <TextBlock VerticalAlignment="Center" Foreground="{StaticResource WarningBrush}">
                                    <Run Text="{x:Bind ViewModel.MemoryThreshold, Mode=OneWay}"/>
                                    <Run Text="%"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Alert Thresholds Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="ALERT THRESHOLDS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Temperature Alerts Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Style="{StaticResource IconContainerRedStyle}" Margin="0,0,12,0">
                            <FontIcon Glyph="&#xE9CA;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <ToggleSwitch Grid.Column="1" Header="Enable temperature alerts"
                                      IsOn="{x:Bind ViewModel.EnableTempAlerts, Mode=TwoWay}"/>
                    </Grid>

                    <StackPanel Spacing="16" Visibility="{x:Bind ViewModel.EnableTempAlerts, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <!-- CPU Temperature -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="CPU Temperature" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <Grid ColumnSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Warning" Foreground="{StaticResource WarningBrush}" FontSize="12"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Slider Minimum="50" Maximum="85" Width="150"
                                                Value="{x:Bind ViewModel.CpuTempWarning, Mode=TwoWay}"/>
                                        <TextBlock VerticalAlignment="Center" Foreground="{StaticResource WarningBrush}">
                                            <Run Text="{x:Bind ViewModel.CpuTempWarning, Mode=OneWay}"/>
                                            <Run Text="°C"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Critical" Foreground="{StaticResource DangerBrush}" FontSize="12"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Slider Minimum="70" Maximum="100" Width="150"
                                                Value="{x:Bind ViewModel.CpuTempCritical, Mode=TwoWay}"/>
                                        <TextBlock VerticalAlignment="Center" Foreground="{StaticResource DangerBrush}">
                                            <Run Text="{x:Bind ViewModel.CpuTempCritical, Mode=OneWay}"/>
                                            <Run Text="°C"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- GPU Temperature -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="GPU Temperature" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <Grid ColumnSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Warning" Foreground="{StaticResource WarningBrush}" FontSize="12"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Slider Minimum="60" Maximum="90" Width="150"
                                                Value="{x:Bind ViewModel.GpuTempWarning, Mode=TwoWay}"/>
                                        <TextBlock VerticalAlignment="Center" Foreground="{StaticResource WarningBrush}">
                                            <Run Text="{x:Bind ViewModel.GpuTempWarning, Mode=OneWay}"/>
                                            <Run Text="°C"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Critical" Foreground="{StaticResource DangerBrush}" FontSize="12"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Slider Minimum="80" Maximum="105" Width="150"
                                                Value="{x:Bind ViewModel.GpuTempCritical, Mode=TwoWay}"/>
                                        <TextBlock VerticalAlignment="Center" Foreground="{StaticResource DangerBrush}">
                                            <Run Text="{x:Bind ViewModel.GpuTempCritical, Mode=OneWay}"/>
                                            <Run Text="°C"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Battery Alerts Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Style="{StaticResource IconContainerStyle}" Margin="0,0,12,0">
                            <FontIcon Glyph="&#xE83F;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <ToggleSwitch Grid.Column="1" Header="Enable battery alerts"
                                      IsOn="{x:Bind ViewModel.EnableBatteryAlerts, Mode=TwoWay}"/>
                    </Grid>

                    <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.EnableBatteryAlerts, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="Battery Level Warnings" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Grid ColumnSpacing="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Low Warning" Foreground="{StaticResource WarningBrush}" FontSize="12"/>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Slider Minimum="10" Maximum="40" Width="150"
                                            Value="{x:Bind ViewModel.BatteryLowWarning, Mode=TwoWay}"/>
                                    <TextBlock VerticalAlignment="Center" Foreground="{StaticResource WarningBrush}">
                                        <Run Text="{x:Bind ViewModel.BatteryLowWarning, Mode=OneWay}"/>
                                        <Run Text="%"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Critical Warning" Foreground="{StaticResource DangerBrush}" FontSize="12"/>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Slider Minimum="5" Maximum="20" Width="150"
                                            Value="{x:Bind ViewModel.BatteryCriticalWarning, Mode=TwoWay}"/>
                                    <TextBlock VerticalAlignment="Center" Foreground="{StaticResource DangerBrush}">
                                        <Run Text="{x:Bind ViewModel.BatteryCriticalWarning, Mode=OneWay}"/>
                                        <Run Text="%"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Data & Privacy Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="DATA &amp; PRIVACY" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Style="{StaticResource IconContainerStyle}" Margin="0,0,12,0">
                            <FontIcon Glyph="&#xE74D;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Clear All Data" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Reset settings and clear stored preferences"
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        </StackPanel>
                        <!-- CLEAR with chrome bezel -->
                        <Border Grid.Column="2" CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="CLEAR"
                                    Command="{x:Bind ViewModel.ClearAllDataCommand}"
                                    Style="{StaticResource OutlinedButtonStyle}" Background="#000000"/>
                        </Border>
                    </Grid>

                    <Border Height="1" Background="{StaticResource SurfaceBrush}"/>

                    <StackPanel Spacing="4">
                        <TextBlock Text="Privacy Notice" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                            SysMonitor runs entirely on your device. No data is collected, transmitted,
                            or shared with third parties. All monitoring data is processed locally and
                            settings are stored on your machine only.
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- About Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="ABOUT" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <Border Style="{StaticResource IconContainerRedStyle}" Width="56" Height="56">
                            <FontIcon Glyph="&#xE7F4;" FontSize="24" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <!-- Strategia-X branding like Android -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="\\strateg\a-" FontSize="10" FontWeight="Light"
                                           Foreground="{StaticResource TextSecondaryBrush}" FontFamily="Consolas"/>
                                <TextBlock Text="x" FontSize="10" FontWeight="Light"
                                           Foreground="{StaticResource PrimaryBrush}" FontFamily="Consolas"/>
                            </StackPanel>
                            <TextBlock FontSize="14" FontWeight="Bold" Margin="0,0,0,4">
                                <Run Text="STX" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <Run Text="." Foreground="{StaticResource PrimaryBrush}"/>
                                <Run Text="1" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <Run Text=" SYSTEM MONITOR" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="Version"/>
                                <Run Text="{x:Bind ViewModel.Version, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="Strategic. Excellence. Engineered." Foreground="{StaticResource PrimaryBrush}"
                               FontSize="12" Margin="0,8,0,0"/>
                    <TextBlock Text="© 2024 Strategia-X. All rights reserved."
                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                <!-- SAVE SETTINGS with chrome bezel -->
                <Border CornerRadius="26" Padding="2">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#707070" Offset="0.0"/>
                            <GradientStop Color="#C0C0C0" Offset="0.3"/>
                            <GradientStop Color="#FFFFFF" Offset="0.5"/>
                            <GradientStop Color="#C0C0C0" Offset="0.7"/>
                            <GradientStop Color="#505050" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Content="SAVE SETTINGS" Command="{x:Bind ViewModel.SaveSettingsCommand}"
                            Style="{StaticResource RedButtonStyle}"/>
                </Border>
                <!-- RESET TO DEFAULTS with chrome bezel -->
                <Border CornerRadius="26" Padding="2">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#707070" Offset="0.0"/>
                            <GradientStop Color="#C0C0C0" Offset="0.3"/>
                            <GradientStop Color="#FFFFFF" Offset="0.5"/>
                            <GradientStop Color="#C0C0C0" Offset="0.7"/>
                            <GradientStop Color="#505050" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Content="RESET TO DEFAULTS" Command="{x:Bind ViewModel.ResetSettingsCommand}"
                            Style="{StaticResource OutlinedButtonStyle}" Background="#000000"/>
                </Border>
            </StackPanel>

            <!-- Status Message -->
            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16,12"
                    Visibility="{x:Bind ViewModel.HasStatusMessage, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE73E;" FontSize="16" Foreground="{StaticResource SuccessBrush}"/>
                    <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                               Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
