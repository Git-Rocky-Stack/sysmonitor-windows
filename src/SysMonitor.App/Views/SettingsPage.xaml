<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <StackPanel Padding="24">
        <TextBlock Text="SETTINGS" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
        <TextBlock Text="Settings page is loading..." Foreground="{StaticResource TextSecondaryBrush}" Margin="0,16,0,0"/>

        <!-- Simple test binding -->
        <TextBlock Text="Theme Index:" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,24,0,0"/>
        <ComboBox SelectedIndex="{x:Bind ViewModel.SelectedThemeIndex, Mode=TwoWay}" Width="200" Margin="0,8,0,0">
            <ComboBoxItem Content="System Default"/>
            <ComboBoxItem Content="Light"/>
            <ComboBoxItem Content="Dark"/>
        </ComboBox>

        <TextBlock Text="If you can see this, the page is working!" Foreground="{StaticResource SuccessBrush}" Margin="0,24,0,0"/>
    </StackPanel>
</Page>
