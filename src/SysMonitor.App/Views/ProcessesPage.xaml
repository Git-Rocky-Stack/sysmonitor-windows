<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.ProcessesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header Banner - centered like Android -->
        <Border Grid.Row="0" Style="{StaticResource HeaderBannerStyle}">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="PROCESS MANAGER" Style="{StaticResource PageHeaderStyle}"
                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                <TextBlock Text="Real-time App Analytics" Style="{StaticResource PageSubtitleStyle}"
                           Foreground="#AAFFFFFF" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Process Controls Section -->
        <StackPanel Grid.Row="1" Spacing="12">
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="PROCESS CONTROLS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Toolbar -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox PlaceholderText="Search processes..."
                             Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Width="300" HorizontalAlignment="Left"
                             Background="{StaticResource SurfaceBrush}"
                             BorderBrush="{StaticResource CardBorderBrush}"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <Border Style="{StaticResource IconContainerRedStyle}" Width="32" Height="32" Padding="6">
                                <FontIcon Glyph="&#xE8A5;" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <TextBlock VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="{x:Bind ViewModel.TotalProcesses, Mode=OneWay}" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Bold"/>
                                <Run Text=" processes"/>
                            </TextBlock>
                        </StackPanel>
                        <Button Content="END TASK" Command="{x:Bind ViewModel.KillProcessCommand}"
                                Style="{StaticResource RedButtonStyle}"
                                IsEnabled="{x:Bind ViewModel.SelectedProcess, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Running Processes Section -->
        <Grid Grid.Row="2" RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="RUNNING PROCESSES" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Process List -->
            <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Processes, Mode=OneWay}"
                  SelectedItem="{x:Bind ViewModel.SelectedProcess, Mode=TwoWay}"
                  Background="Transparent">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid Padding="16,12" Background="{StaticResource SurfaceBrush}"
                          BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="NAME" Style="{StaticResource StatLabelStyle}" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="CPU %" Style="{StaticResource StatLabelStyle}" FontWeight="Bold"/>
                        <TextBlock Grid.Column="2" Text="MEMORY" Style="{StaticResource StatLabelStyle}" FontWeight="Bold"/>
                        <TextBlock Grid.Column="3" Text="PID" Style="{StaticResource StatLabelStyle}" FontWeight="Bold"/>
                        <TextBlock Grid.Column="4" Text="STATUS" Style="{StaticResource StatLabelStyle}" FontWeight="Bold"/>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="16,12" BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Name}" TextTrimming="CharacterEllipsis"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Column="1" Foreground="{StaticResource PrimaryBrush}">
                            <Run Text="{Binding CpuUsagePercent, Converter={StaticResource PercentConverter}}"/>
                            <Run Text="%"/>
                        </TextBlock>
                        <TextBlock Grid.Column="2" Foreground="{StaticResource TextSecondaryBrush}">
                            <Run Text="{Binding MemoryMB, Converter={StaticResource MBConverter}}"/>
                            <Run Text=" MB"/>
                        </TextBlock>
                        <TextBlock Grid.Column="3" Text="{Binding Id}" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Grid.Column="4" Text="{Binding Status}" Foreground="{StaticResource SuccessBrush}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
