<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.UserGuidePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="16" Padding="0,0,0,24">

            <!-- Page Header Banner -->
            <Border Background="#000000" Padding="24" Margin="-24,-24,-24,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Header text -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="USER'S GUIDE" Style="{StaticResource PageHeaderStyle}"
                                   Foreground="{StaticResource CyanAccentBrush}" HorizontalAlignment="Left"/>
                        <TextBlock Text="Complete Reference &amp; Documentation" Style="{StaticResource PageSubtitleStyle}"
                                   Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                    </StackPanel>

                    <!-- Center: STX.1 Home Logo -->
                    <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                           Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Stretch="Uniform"/>
                </Grid>
            </Border>

            <!-- ==================== GETTING STARTED ==================== -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="GETTING STARTED" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Welcome to STX.1 System Monitor" FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" LineHeight="24">
                        STX.1 System Monitor is your all-in-one Windows optimization and monitoring toolkit.
                        Designed with performance and simplicity in mind, it helps you keep your PC running
                        at peak efficiency.
                    </TextBlock>

                    <Grid ColumnSpacing="16" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Tip 1 -->
                        <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource PrimaryBrush}"
                                CornerRadius="12" Width="24" Height="24">
                            <TextBlock Text="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontWeight="Bold" Foreground="White" FontSize="12"/>
                        </Border>
                        <TextBlock Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Center"
                                   Foreground="{StaticResource TextPrimaryBrush}">
                            <Run FontWeight="SemiBold">Dashboard</Run>
                            <Run> - Start here for a quick overview of your system's health and resources.</Run>
                        </TextBlock>

                        <!-- Tip 2 -->
                        <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource SuccessBrush}"
                                CornerRadius="12" Width="24" Height="24">
                            <TextBlock Text="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontWeight="Bold" Foreground="White" FontSize="12"/>
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Center"
                                   Foreground="{StaticResource TextPrimaryBrush}">
                            <Run FontWeight="SemiBold">Quick Clean</Run>
                            <Run> - One-click cleanup to free space and boost performance instantly.</Run>
                        </TextBlock>

                        <!-- Tip 3 -->
                        <Border Grid.Row="2" Grid.Column="0" Background="{StaticResource CyanAccentBrush}"
                                CornerRadius="12" Width="24" Height="24">
                            <TextBlock Text="3" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontWeight="Bold" Foreground="White" FontSize="12"/>
                        </Border>
                        <TextBlock Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Center"
                                   Foreground="{StaticResource TextPrimaryBrush}">
                            <Run FontWeight="SemiBold">Settings</Run>
                            <Run> - Customize alerts, thresholds, and behaviors to match your preferences.</Run>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ==================== FEATURE GUIDE ==================== -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="FEATURE GUIDE" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Monitoring Features -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerRedStyle}" Width="40" Height="40">
                            <FontIcon Glyph="&#xE9D9;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="System Monitoring" FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock Text="Real-time hardware insights" FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run Text="&#xE950; " FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource PrimaryBrush}"/>
                                <Run FontWeight="SemiBold">CPU Monitor</Run>
                                <Run> - Track processor usage, cores, and performance</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run Text="&#xE7F4; " FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource PrimaryBrush}"/>
                                <Run FontWeight="SemiBold">GPU Monitor</Run>
                                <Run> - Graphics card stats and temperature</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run Text="&#xE964; " FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource PrimaryBrush}"/>
                                <Run FontWeight="SemiBold">Memory</Run>
                                <Run> - RAM usage with optimization options</Run>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run Text="&#xEDA2; " FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource PrimaryBrush}"/>
                                <Run FontWeight="SemiBold">Disk</Run>
                                <Run> - Storage space and drive health</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run Text="&#xE774; " FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource PrimaryBrush}"/>
                                <Run FontWeight="SemiBold">Network</Run>
                                <Run> - Upload/download speeds in real-time</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run Text="&#xE9CA; " FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource PrimaryBrush}"/>
                                <Run FontWeight="SemiBold">Temperature</Run>
                                <Run> - CPU/GPU thermal monitoring</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run Text="&#xE9D9; " FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource PrimaryBrush}"/>
                                <Run FontWeight="SemiBold">Performance</Run>
                                <Run> - App operation metrics and timing</Run>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Cleanup & Optimization -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}" Background="{StaticResource SuccessBrush}" Width="40" Height="40">
                            <FontIcon Glyph="&#xE74D;" FontSize="18" Foreground="White"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Cleanup &amp; Optimization" FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource SuccessBrush}"/>
                            <TextBlock Text="Free space and boost performance" FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}">Directory Cleaner</Run>
                                <Run> - Remove temp files, cache, and junk</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}">Registry Cleaner</Run>
                                <Run> - Fix broken registry entries safely</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}">Browser Privacy</Run>
                                <Run> - Clear browsing data and cookies</Run>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}">Startup Manager</Run>
                                <Run> - Control which apps run at boot</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}">Drive Wiper</Run>
                                <Run> - Secure file deletion (unrecoverable)</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}">Scheduled Cleaning</Run>
                                <Run> - Automate cleanup tasks</Run>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Game Mode -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}" Background="{StaticResource SuccessBrush}" Width="40" Height="40">
                            <FontIcon Glyph="&#xE7FC;" FontSize="18" Foreground="White"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Game Mode" FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource SuccessBrush}"/>
                            <TextBlock Text="One-click gaming optimization" FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" LineHeight="22">
                        Game Mode optimizes your system for gaming with a single click. It closes background
                        applications, switches to High Performance power plan, and frees up RAM for maximum
                        gaming performance.
                    </TextBlock>

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}">Close Background Apps</Run>
                                <Run> - Kills browsers, Discord, Spotify, etc.</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}">High Performance Mode</Run>
                                <Run> - Sets Windows power plan automatically</Run>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}">Free Up RAM</Run>
                                <Run> - Optimizes memory for gaming</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}">Easy Toggle</Run>
                                <Run> - Enable/disable with one click</Run>
                            </TextBlock>
                        </StackPanel>
                    </Grid>

                    <!-- Target Apps Info -->
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="12">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Apps Closed by Game Mode:" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11">
                                Chrome, Firefox, Edge, Opera, Brave, Discord, Slack, Teams, Skype, Zoom, Telegram,
                                Spotify, iTunes, OneDrive, Dropbox, Google Drive Sync, Steam Web Helper
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Utilities -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}" Background="{StaticResource CyanAccentBrush}" Width="40" Height="40">
                            <FontIcon Glyph="&#xE8B7;" FontSize="18" Foreground="White"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Utilities &amp; Tools" FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource CyanAccentBrush}"/>
                            <TextBlock Text="Powerful productivity features" FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource CyanAccentBrush}">Large Files</Run>
                                <Run> - Find space-hogging files quickly</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource CyanAccentBrush}">Duplicate Finder</Run>
                                <Run> - Locate and remove duplicate files</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource CyanAccentBrush}">File Tools</Run>
                                <Run> - Batch rename, convert formats</Run>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource CyanAccentBrush}">PDF Tools</Run>
                                <Run> - Merge, split, convert PDFs</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource CyanAccentBrush}">Image Tools</Run>
                                <Run> - Resize, compress, convert images</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource CyanAccentBrush}">Network Mapper</Run>
                                <Run> - Discover devices on your network</Run>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- System Tray & Alerts -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}" Background="{StaticResource WarningBrush}" Width="40" Height="40">
                            <FontIcon Glyph="&#xE7E8;" FontSize="18" Foreground="White"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="System Tray &amp; Alerts" FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource WarningBrush}"/>
                            <TextBlock Text="Background monitoring with notifications" FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" LineHeight="22">
                        STX.1 runs quietly in the system tray, providing live stats and alerts without interrupting your work.
                        Configure thresholds in Settings and receive toast notifications when temperatures or memory usage exceed limits.
                    </TextBlock>

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Live Tooltip</Run>
                                <Run> - Hover over tray icon for CPU/RAM stats</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Minimize to Tray</Run>
                                <Run> - Close button hides to tray (configurable)</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Quick Menu</Run>
                                <Run> - Right-click tray icon for navigation</Run>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Temperature Alerts</Run>
                                <Run> - CPU (75°C/90°C) and GPU warnings</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Memory Alerts</Run>
                                <Run> - Notification when RAM exceeds 80%</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Smart Cooldown</Run>
                                <Run> - 5-minute delay prevents notification spam</Run>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Historical Data & Graphs -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}" Background="{StaticResource WarningBrush}" Width="40" Height="40">
                            <FontIcon Glyph="&#xE81C;" FontSize="18" Foreground="White"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Historical Data &amp; Graphs" FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource WarningBrush}"/>
                            <TextBlock Text="30-day performance trends" FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" LineHeight="22">
                        The History page displays interactive charts showing CPU, Memory, and Temperature trends over time.
                        Data is automatically recorded every 30 seconds and stored locally for up to 30 days.
                    </TextBlock>

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">CPU Usage Chart</Run>
                                <Run> - Track processor load over time</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Memory Chart</Run>
                                <Run> - Monitor RAM usage patterns</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Temperature Chart</Run>
                                <Run> - CPU and GPU thermal trends</Run>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Time Ranges</Run>
                                <Run> - 1 hour, 24 hours, 7 days, 30 days</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Interactive Charts</Run>
                                <Run> - Zoom and pan with LiveCharts2</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Auto-Purge</Run>
                                <Run> - Old data cleaned automatically</Run>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Performance Monitoring -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}" Background="{StaticResource WarningBrush}" Width="40" Height="40">
                            <FontIcon Glyph="&#xE9D9;" FontSize="18" Foreground="White"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Performance Monitoring" FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource WarningBrush}"/>
                            <TextBlock Text="Track application operation metrics" FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" LineHeight="22">
                        The Performance page provides real-time insights into how STX.1 System Monitor operates internally.
                        Monitor operation timing, identify bottlenecks, and export metrics for analysis.
                    </TextBlock>

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">System Overview</Run>
                                <Run> - Memory usage, GC pressure, frame rate</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Operation Metrics</Run>
                                <Run> - Count, average, min, max timing</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Percentiles</Run>
                                <Run> - P95 and P99 latency tracking</Run>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Status Indicators</Run>
                                <Run> - Excellent/Good/Fair/Poor/Critical</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Pause/Resume</Run>
                                <Run> - Control monitoring on demand</Run>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource TextPrimaryBrush}">
                                <Run FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}">Export CSV</Run>
                                <Run> - Save metrics for external analysis</Run>
                            </TextBlock>
                        </StackPanel>
                    </Grid>

                    <!-- Performance Thresholds -->
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Performance Thresholds" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Border Background="#4CAF50" Width="12" Height="12" CornerRadius="3"/>
                                    <TextBlock Text="Excellent (&lt;16ms)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Border Background="#8BC34A" Width="12" Height="12" CornerRadius="3"/>
                                    <TextBlock Text="Good (&lt;50ms)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Border Background="#FF9800" Width="12" Height="12" CornerRadius="3"/>
                                    <TextBlock Text="Fair (&lt;100ms)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Border Background="#FF5722" Width="12" Height="12" CornerRadius="3"/>
                                    <TextBlock Text="Poor (&lt;200ms)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Border Background="#F44336" Width="12" Height="12" CornerRadius="3"/>
                                    <TextBlock Text="Critical (&gt;200ms)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- ==================== TIPS & BEST PRACTICES ==================== -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="TIPS &amp; BEST PRACTICES" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <!-- Tip Cards -->
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16">
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <FontIcon Glyph="&#xE7BA;" FontSize="24" Foreground="{StaticResource WarningBrush}"/>
                            <StackPanel>
                                <TextBlock Text="Run Health Check Weekly" FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13">
                                    Regular health checks help identify potential issues before they become problems.
                                    The Health Check page provides a comprehensive system analysis.
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>

