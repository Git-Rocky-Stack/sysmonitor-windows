<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.DonationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="16" Padding="0,0,0,24">

            <!-- Page Header Banner - AMOLED pure black with left header, centered logo -->
            <Border Background="#000000" Padding="24" Margin="-24,-24,-24,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Header text -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="DONATE" Style="{StaticResource PageHeaderStyle}"
                                   Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Left"/>
                        <TextBlock Text="Support STX.1 System Monitor" Style="{StaticResource PageSubtitleStyle}"
                                   Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                    </StackPanel>

                    <!-- Center: STX.1 Home Logo -->
                    <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                           Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Stretch="Uniform"/>
                </Grid>
            </Border>

            <!-- Help Support Section Header -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="HELP SUPPORT THIS PROJECT" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Main Content Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="20">
                    <!-- Introduction Text -->
                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" LineHeight="24">
                        STX.1 System Monitor is a free app created with love to help you get the most out of your PC.
                        It's designed to keep your system running smoothly without cost - because everyone deserves
                        access to good tools.
                    </TextBlock>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" LineHeight="24">
                        But building and maintaining software takes time and resources. If this app has been helpful to you,
                        consider buying us a coffee (or helping with the electric bill). Your support helps us keep improving
                        STX.1 and creating more useful tools.
                    </TextBlock>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" FontStyle="Italic">
                        Every bit helps - and we truly appreciate it.
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Donate Section Header -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="MAKE A DONATION" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Donation Options Card -->
            <Border Style="{StaticResource CardStyle}">
                <Grid ColumnSpacing="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- PayPal Button Section -->
                    <StackPanel Grid.Column="0" Spacing="16" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource IconContainerStyle}" Background="#003087" Width="48" Height="48">
                                <FontIcon Glyph="&#xE719;" FontSize="20" Foreground="White"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="PayPal" FontWeight="Bold" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Secure donation via PayPal" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13">
                            Click the button below to make a secure donation through PayPal.
                            You can choose your own amount.
                        </TextBlock>

                        <!-- Donate Button with chrome bezel -->
                        <Border CornerRadius="26" Padding="2" HorizontalAlignment="Left">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Command="{x:Bind ViewModel.DonateCommand}"
                                    Style="{StaticResource RedButtonStyle}"
                                    Padding="24,12">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <FontIcon Glyph="&#xE719;" FontSize="16"/>
                                    <TextBlock Text="DONATE WITH PAYPAL" FontWeight="Bold"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>

                    <!-- QR Code Section -->
                    <StackPanel Grid.Column="1" Spacing="12" HorizontalAlignment="Center">
                        <TextBlock Text="Or scan QR code" Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12" HorizontalAlignment="Center"/>
                        <Border Background="White" CornerRadius="8" Padding="12">
                            <Image Source="ms-appx:///Assets/DonateQR.png"
                                   Width="150" Height="150"
                                   Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Scan with PayPal app" Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Thank You Section Header -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="THANK YOU" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Thank You Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <Border Style="{StaticResource IconContainerRedStyle}" Width="56" Height="56">
                            <FontIcon Glyph="&#xEB51;" FontSize="24" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Your Support Matters" FontWeight="Bold" FontSize="16"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Thank you for using STX.1 System Monitor"
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" LineHeight="24">
                        Whether you donate or not, we're grateful that you're using STX.1 System Monitor.
                        Your feedback, reviews, and word-of-mouth recommendations help us grow and improve.
                    </TextBlock>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource SuccessBrush}" FontSize="14" FontWeight="SemiBold">
                        Thank you for being part of the STX.1 community!
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Footer with Strategia-X branding -->
            <StackPanel HorizontalAlignment="Center" Spacing="8" Margin="0,16,0,0">
                <Image Source="ms-appx:///Assets/Header_Main1.png"
                       Height="16" HorizontalAlignment="Center"
                       Stretch="Uniform" Opacity="0.7"/>
                <TextBlock Text="Strategic. Excellence. Engineered."
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource PrimaryBrush}"
                           FontSize="12"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
