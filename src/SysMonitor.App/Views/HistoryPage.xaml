<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="using:SysMonitor.App.ViewModels"
    Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="0,0,0,24" Spacing="16">

            <!-- Page Header Banner - AMOLED pure black with left header, centered logo -->
            <Border Background="#000000" Padding="24" Margin="-24,-24,-24,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Header text -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="HISTORY" Style="{StaticResource PageHeaderStyle}"
                                   Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                        <TextBlock Text="System performance trends over time" Style="{StaticResource PageSubtitleStyle}"
                                   Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                    </StackPanel>

                    <!-- Center: STX.1 Home Logo -->
                    <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                           Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Stretch="Uniform"/>
                </Grid>
            </Border>

            <!-- Time Range Selector -->
            <StackPanel Spacing="12">
                <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                    <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                    <TextBlock Text="TIME RANGE" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                </StackPanel>

                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource IconContainerRedStyle}" Margin="0,0,16,0">
                            <FontIcon Glyph="&#xE823;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Horizontal" Spacing="8">
                            <RadioButtons SelectedIndex="{x:Bind ViewModel.SelectedTimeRangeIndex, Mode=TwoWay}">
                                <RadioButton Content="1 Hour"/>
                                <RadioButton Content="24 Hours"/>
                                <RadioButton Content="7 Days"/>
                                <RadioButton Content="30 Days"/>
                            </RadioButtons>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                            <!-- Refresh with chrome bezel -->
                            <Border CornerRadius="26" Padding="2">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#707070" Offset="0.0"/>
                                        <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                        <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                        <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                        <GradientStop Color="#505050" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Button Content="Refresh" Command="{x:Bind ViewModel.RefreshDataCommand}"
                                        Style="{StaticResource RedButtonStyle}"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Status Message -->
                <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                           Style="{StaticResource CardSubtitleStyle}"
                           HorizontalAlignment="Center"
                           Visibility="{x:Bind ViewModel.StatusMessage, Mode=OneWay, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                          Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                          Width="40" Height="40"
                          HorizontalAlignment="Center"/>

            <!-- Placeholder for charts - LiveCharts requires code-behind integration -->
            <StackPanel Spacing="12">
                <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                    <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                    <TextBlock Text="CPU USAGE (%)" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                </StackPanel>

                <Border Style="{StaticResource CardStyle}" MinHeight="200">
                    <Grid x:Name="CpuChartContainer" Height="180"/>
                </Border>
            </StackPanel>

            <StackPanel Spacing="12">
                <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                    <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                    <TextBlock Text="MEMORY USAGE (%)" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                </StackPanel>

                <Border Style="{StaticResource CardStyle}" MinHeight="200">
                    <Grid x:Name="MemoryChartContainer" Height="180"/>
                </Border>
            </StackPanel>

            <StackPanel Spacing="12">
                <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                    <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                    <TextBlock Text="TEMPERATURE (Â°C)" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                </StackPanel>

                <Border Style="{StaticResource CardStyle}" MinHeight="200">
                    <Grid x:Name="TemperatureChartContainer" Height="180"/>
                </Border>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
