<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.DuplicateFinderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:SysMonitor.App.ViewModels"
    Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="0,0,0,24" Spacing="16">

            <!-- Page Header Banner - AMOLED pure black with left header, centered logo -->
            <Border Background="#000000" Padding="24" Margin="-24,-24,-24,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Header text -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="DUPLICATE FINDER" Style="{StaticResource PageHeaderStyle}"
                                   Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                        <TextBlock Text="Find and remove duplicate files" Style="{StaticResource PageSubtitleStyle}"
                                   Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                    </StackPanel>

                    <!-- Center: STX.1 Home Logo -->
                    <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                           Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Stretch="Uniform"/>
                </Grid>
            </Border>

            <!-- Scan Controls -->
            <Border Style="{StaticResource CardStyle}" Padding="24">
                <Grid RowSpacing="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Path Selection -->
                    <Grid Grid.Row="0" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Text="{x:Bind ViewModel.ScanPath, Mode=TwoWay}"
                                 PlaceholderText="Select folder to scan for duplicates..."
                                 Style="{StaticResource DefaultTextBoxStyle}"/>
                        <!-- BROWSE with chrome bezel -->
                        <Border Grid.Column="1" CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="BROWSE" Command="{x:Bind ViewModel.BrowseFolderCommand}"
                                    Style="{StaticResource OutlineButtonStyle}" Background="#000000"/>
                        </Border>
                        <!-- SCAN with chrome bezel -->
                        <Border Grid.Column="2" CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToScanButtonConverter}}"
                                    Command="{x:Bind ViewModel.ScanCommand}"
                                    Style="{StaticResource RedButtonStyle}" Width="140"/>
                        </Border>
                    </Grid>

                    <!-- Progress -->
                    <StackPanel Grid.Row="1" Spacing="8"
                                Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ProgressBar Value="{x:Bind ViewModel.ScanProgress, Mode=OneWay}"
                                     Maximum="100" Height="6" CornerRadius="3"
                                     Background="{StaticResource SurfaceLightBrush}"
                                     Foreground="{StaticResource PrimaryBrush}"/>
                        <TextBlock Text="{x:Bind ViewModel.ScanStatus, Mode=OneWay}"
                                   Style="{StaticResource CardSubtitleStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Action Feedback -->
            <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16"
                    Visibility="{x:Bind ViewModel.HasActionStatus, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon Grid.Column="0" Glyph="&#xE73E;" FontSize="20">
                        <FontIcon.Foreground>
                            <SolidColorBrush Color="{x:Bind ViewModel.ActionStatusColor, Mode=OneWay}"/>
                        </FontIcon.Foreground>
                    </FontIcon>
                    <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.ActionStatus, Mode=OneWay}"
                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Stats Summary -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="DUPLICATE ANALYSIS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <StackPanel HorizontalAlignment="Center" Spacing="8">
                        <TextBlock Text="DUPLICATE GROUPS" Style="{StaticResource StatLabelStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{x:Bind ViewModel.GroupsFound, Mode=OneWay}"
                                   Style="{StaticResource StatValueStyle}" Foreground="{StaticResource CyanAccentBrush}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <StackPanel HorizontalAlignment="Center" Spacing="8">
                        <TextBlock Text="TOTAL DUPLICATES" Style="{StaticResource StatLabelStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{x:Bind ViewModel.TotalDuplicates, Mode=OneWay}"
                                   Style="{StaticResource StatValueStyle}" Foreground="{StaticResource WarningBrush}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                    <StackPanel HorizontalAlignment="Center" Spacing="8">
                        <TextBlock Text="WASTED SPACE" Style="{StaticResource StatLabelStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{x:Bind ViewModel.WastedSpace, Mode=OneWay}"
                                   Style="{StaticResource StatValueStyle}" Foreground="{StaticResource PrimaryBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Action Buttons -->
            <Border Style="{StaticResource CardStyle}" Padding="16">
                <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                    <!-- SELECT ALL DUPLICATES with chrome bezel -->
                    <Border CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Content="SELECT ALL DUPLICATES" Command="{x:Bind ViewModel.SelectAllDuplicatesCommand}"
                                Style="{StaticResource OutlineButtonStyle}" Background="#000000"/>
                    </Border>
                    <!-- SELECT NONE with chrome bezel -->
                    <Border CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Content="SELECT NONE" Command="{x:Bind ViewModel.SelectNoneCommand}"
                                Style="{StaticResource OutlineButtonStyle}" Background="#000000"/>
                    </Border>
                    <!-- DELETE SELECTED with chrome bezel -->
                    <Border CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Command="{x:Bind ViewModel.DeleteSelectedDuplicatesCommand}"
                                Style="{StaticResource RedButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                <TextBlock Text="DELETE SELECTED"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Duplicate Groups List -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="DUPLICATE FILES" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}" Padding="16" MinHeight="200">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.DuplicateGroups, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Vertical" Spacing="16"/>
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="vm:DuplicateGroupDisplay">
                            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="12" Padding="16">
                                <StackPanel Spacing="12">
                                    <!-- Group Header -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                                            <Border Background="{StaticResource WarningBrush}" CornerRadius="8"
                                                    Padding="8,4">
                                                <TextBlock FontSize="11" FontWeight="Bold"
                                                           Foreground="{StaticResource TextPrimaryBrush}">
                                                    <Run Text="{x:Bind DuplicateCount}"/>
                                                    <Run Text="DUPLICATES"/>
                                                </TextBlock>
                                            </Border>
                                            <TextBlock Text="{x:Bind FormattedSize}" VerticalAlignment="Center"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                                   Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold">
                                            <Run Text="Wasted:"/>
                                            <Run Text="{x:Bind WastedSpace}"/>
                                        </TextBlock>
                                    </Grid>

                                    <!-- Files in Group -->
                                    <ItemsRepeater ItemsSource="{x:Bind Files}">
                                        <ItemsRepeater.Layout>
                                            <StackLayout Orientation="Vertical" Spacing="8"/>
                                        </ItemsRepeater.Layout>
                                        <ItemsRepeater.ItemTemplate>
                                            <DataTemplate x:DataType="vm:DuplicateFileDisplay">
                                                <Border Background="{StaticResource SurfaceLightBrush}"
                                                        CornerRadius="8" Padding="12">
                                                    <Grid ColumnSpacing="12">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <CheckBox Grid.Column="0" IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                                  IsEnabled="{x:Bind IsOriginal, Converter={StaticResource InvertBoolConverter}}"
                                                                  VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="{x:Bind FileName}" FontWeight="SemiBold"
                                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                                            <TextBlock Text="{x:Bind Directory}" FontSize="11"
                                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                        </StackPanel>

                                                        <Border Grid.Column="2" CornerRadius="6" Padding="10,4"
                                                                VerticalAlignment="Center">
                                                            <Border.Background>
                                                                <SolidColorBrush Color="{x:Bind StatusColor}" Opacity="0.2"/>
                                                            </Border.Background>
                                                            <TextBlock Text="{x:Bind StatusText}" FontSize="10" FontWeight="Bold">
                                                                <TextBlock.Foreground>
                                                                    <SolidColorBrush Color="{x:Bind StatusColor}"/>
                                                                </TextBlock.Foreground>
                                                            </TextBlock>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsRepeater.ItemTemplate>
                                    </ItemsRepeater>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </Border>

            <!-- Footer -->
            <StackPanel HorizontalAlignment="Center" Spacing="8" Margin="0,16,0,0">
                <Image Source="ms-appx:///Assets/Header_Main1.png"
                       Height="16" HorizontalAlignment="Center"
                       Stretch="Uniform" Opacity="0.7"/>
                <TextBlock Text="Powered by Strategia-X Technology"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource PrimaryBrush}"
                           FontSize="12"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
