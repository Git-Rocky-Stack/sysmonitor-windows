<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.PerformancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="using:SysMonitor.App.ViewModels"
    Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="0,0,0,24" Spacing="16">

            <!-- Page Header Banner -->
            <Border Background="#000000" Padding="24" Margin="-24,-24,-24,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Header text -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="PERFORMANCE MONITOR" Style="{StaticResource PageHeaderStyle}"
                                   Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                        <TextBlock Text="Real-time application performance metrics" Style="{StaticResource PageSubtitleStyle}"
                                   Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                    </StackPanel>

                    <!-- Right: Controls -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <Button Content="{x:Bind ViewModel.IsMonitoring, Mode=OneWay, Converter={StaticResource BoolToMonitoringTextConverter}}"
                                Command="{x:Bind ViewModel.ToggleMonitoringCommand}"
                                Style="{StaticResource AccentButtonStyle}"/>
                        <Button Content="Clear" Command="{x:Bind ViewModel.ClearMetricsCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                        <Button Content="Export CSV" Command="{x:Bind ViewModel.ExportMetricsCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- System Overview Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="SYSTEM OVERVIEW" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- System Stats Cards -->
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Memory Usage Card -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Padding="16">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource MenuCardIconStyle}">
                                <FontIcon Glyph="&#xE964;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <TextBlock Text="MEMORY" Style="{StaticResource StatLabelStyle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock FontSize="28" FontWeight="Bold" Foreground="{StaticResource CyanAccentBrush}">
                            <Run Text="{x:Bind ViewModel.MemoryUsageMB, Mode=OneWay, Converter={StaticResource DoubleToStringConverter}}"/>
                            <Run Text="MB" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </TextBlock>
                        <TextBlock Text="Working Set" Style="{StaticResource MenuItemSubtitleStyle}" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- GC Pressure Card -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Padding="16">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource MenuCardIconStyle}">
                                <FontIcon Glyph="&#xE74D;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <TextBlock Text="GC PRESSURE" Style="{StaticResource StatLabelStyle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock FontSize="28" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}">
                            <Run Text="{x:Bind ViewModel.GcPressure, Mode=OneWay, Converter={StaticResource DoubleToStringConverter}}"/>
                        </TextBlock>
                        <TextBlock Text="Collection Score" Style="{StaticResource MenuItemSubtitleStyle}" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Frame Rate Card -->
                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Padding="16">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource MenuCardIconStyle}">
                                <FontIcon Glyph="&#xE7F4;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <TextBlock Text="FRAME RATE" Style="{StaticResource StatLabelStyle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock FontSize="28" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}">
                            <Run Text="{x:Bind ViewModel.FrameRate, Mode=OneWay, Converter={StaticResource DoubleToStringConverter}}"/>
                            <Run Text="FPS" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </TextBlock>
                        <TextBlock Text="Target: 60 FPS" Style="{StaticResource MenuItemSubtitleStyle}" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Metrics Count Card -->
                <Border Grid.Column="3" Style="{StaticResource StatCardStyle}" Padding="16">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource MenuCardIconStyle}">
                                <FontIcon Glyph="&#xE9D9;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <TextBlock Text="TRACKED OPS" Style="{StaticResource StatLabelStyle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}">
                            <Run Text="{x:Bind ViewModel.Metrics.Count, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Text="Operations Monitored" Style="{StaticResource MenuItemSubtitleStyle}" FontSize="11"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Performance Metrics Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="OPERATION METRICS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Metrics List -->
            <Border Style="{StaticResource CardStyle}" Padding="0">
                <!-- Header Row -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#1A1A1A" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="OPERATION" Style="{StaticResource StatLabelStyle}" FontSize="11"/>
                            <TextBlock Grid.Column="1" Text="COUNT" Style="{StaticResource StatLabelStyle}" FontSize="11" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="AVG (ms)" Style="{StaticResource StatLabelStyle}" FontSize="11" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="3" Text="MIN (ms)" Style="{StaticResource StatLabelStyle}" FontSize="11" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="4" Text="MAX (ms)" Style="{StaticResource StatLabelStyle}" FontSize="11" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="5" Text="P95 (ms)" Style="{StaticResource StatLabelStyle}" FontSize="11" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="6" Text="P99 (ms)" Style="{StaticResource StatLabelStyle}" FontSize="11" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="7" Text="STATUS" Style="{StaticResource StatLabelStyle}" FontSize="11" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <ListView Grid.Row="1"
                              ItemsSource="{x:Bind ViewModel.Metrics, Mode=OneWay}"
                              SelectionMode="None"
                              Background="Transparent"
                              MaxHeight="500">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="MinHeight" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:PerformanceMetric">
                                <Border Padding="16,12" BorderBrush="#2A2A2A" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{x:Bind Operation}"
                                                   Foreground="{StaticResource TextPrimaryBrush}" FontSize="13"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind Count}"
                                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind AverageMsFormatted}"
                                                   Foreground="{StaticResource CyanAccentBrush}" FontSize="13" FontWeight="SemiBold"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind MinMsFormatted}"
                                                   Foreground="{StaticResource SuccessBrush}" FontSize="13"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="{x:Bind MaxMsFormatted}"
                                                   Foreground="{StaticResource WarningBrush}" FontSize="13"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="5" Text="{x:Bind P95MsFormatted}"
                                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="6" Text="{x:Bind P99MsFormatted}"
                                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        <Border Grid.Column="7" Background="#4CAF50"
                                                CornerRadius="4" Padding="8,4" HorizontalAlignment="Center">
                                            <TextBlock Text="{x:Bind Status}" FontSize="11" FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- Legend Section -->
            <Border Style="{StaticResource CardStyle}" Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="PERFORMANCE THRESHOLDS" Style="{StaticResource StatLabelStyle}"/>
                    <StackPanel Orientation="Horizontal" Spacing="24">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#4CAF50" Width="16" Height="16" CornerRadius="4"/>
                            <TextBlock Text="Excellent (&lt;16ms)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#8BC34A" Width="16" Height="16" CornerRadius="4"/>
                            <TextBlock Text="Good (&lt;50ms)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#FF9800" Width="16" Height="16" CornerRadius="4"/>
                            <TextBlock Text="Fair (&lt;100ms)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#FF5722" Width="16" Height="16" CornerRadius="4"/>
                            <TextBlock Text="Poor (&lt;200ms)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#F44336" Width="16" Height="16" CornerRadius="4"/>
                            <TextBlock Text="Critical (&gt;200ms)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Info Section -->
            <Border Style="{StaticResource CardStyle}" Padding="16" Background="#1A1A1A">
                <StackPanel Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE946;" FontSize="16" Foreground="{StaticResource CyanAccentBrush}"/>
                        <TextBlock Text="About Performance Monitoring" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                    </StackPanel>
                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" LineHeight="20">
                        This page displays real-time performance metrics for SysMonitor operations. Use the TrackOperation API in your code to monitor custom operations.
                        Metrics include execution count, average/min/max times, and P95/P99 percentiles. Export to CSV for detailed analysis.
                    </TextBlock>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>