<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.StartupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header Banner -->
        <Border Grid.Row="0" Style="{StaticResource HeaderBannerStyle}">
            <StackPanel>
                <TextBlock Text="STARTUP MANAGER" Style="{StaticResource PageHeaderStyle}"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="Control Programs That Run at Boot" Style="{StaticResource PageSubtitleStyle}"
                           Foreground="#AAFFFFFF"/>
            </StackPanel>
        </Border>

        <!-- Action Bar -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource IconContainerRedStyle}" Margin="0,0,16,0">
                    <FontIcon Glyph="&#xE7E8;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                </Border>

                <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                           Style="{StaticResource CardTitleStyle}" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <!-- DISABLE with chrome bezel -->
                    <Border CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Content="DISABLE" Command="{x:Bind ViewModel.DisableItemCommand}"
                                Style="{StaticResource OutlinedButtonStyle}" Background="#000000"/>
                    </Border>
                    <!-- ENABLE with chrome bezel -->
                    <Border CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Content="ENABLE" Command="{x:Bind ViewModel.EnableItemCommand}"
                                Style="{StaticResource OutlinedButtonStyle}" Background="#000000"/>
                    </Border>
                    <!-- DELETE with chrome bezel -->
                    <Border CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Content="DELETE" Command="{x:Bind ViewModel.DeleteItemCommand}"
                                Style="{StaticResource RedButtonStyle}"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Startup Items List -->
        <ListView Grid.Row="2" ItemsSource="{x:Bind ViewModel.StartupItems, Mode=OneWay}"
                  SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=TwoWay}"
                  Background="Transparent">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,4,0,4"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardStyle}" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource IconContainerStyle}"
                                    Width="40" Height="40" Margin="0,0,12,0">
                                <FontIcon Glyph="&#xE8FC;" FontSize="16" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" Style="{StaticResource CardTitleStyle}"/>
                                <TextBlock Text="{Binding Location}" Style="{StaticResource CardSubtitleStyle}"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <TextBlock Grid.Column="2" Text="{Binding Publisher}" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis"/>

                            <TextBlock Grid.Column="3" Text="{Binding Impact}" VerticalAlignment="Center"
                                       Foreground="{StaticResource WarningBrush}"/>

                            <TextBlock Grid.Column="4" VerticalAlignment="Center"
                                       Foreground="{StaticResource SuccessBrush}" FontWeight="SemiBold">
                                <Run Text="{Binding IsEnabled}"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
