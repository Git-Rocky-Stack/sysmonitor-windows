<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.BrowserPrivacyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Header Banner -->
        <Border Grid.Row="0" Background="#000000" Padding="24" Margin="-24,-24,-24,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="BROWSER PRIVACY" Style="{StaticResource PageHeaderStyle}"
                               Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                    <TextBlock Text="Clean Browser Data, Cookies &amp; Tracking Files" Style="{StaticResource PageSubtitleStyle}"
                               Foreground="#AAFFFFFF" HorizontalAlignment="Left"/>
                </StackPanel>

                <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                       Height="80" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform"/>
            </Grid>
        </Border>

        <!-- Controls Section -->
        <StackPanel Grid.Row="1" Spacing="12">
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="PRIVACY CONTROLS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource IconContainerRedStyle}" Margin="0,0,16,0">
                        <FontIcon Glyph="&#xE72E;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" Style="{StaticResource CardTitleStyle}"/>
                        <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,4,0,0">
                            <TextBlock Style="{StaticResource CardSubtitleStyle}">
                                <Run Text="Total: "/>
                                <Run Text="{x:Bind ViewModel.FormattedTotalSize, Mode=OneWay}" Foreground="{StaticResource WarningBrush}"/>
                            </TextBlock>
                            <TextBlock Style="{StaticResource CardSubtitleStyle}">
                                <Run Text="Selected: "/>
                                <Run Text="{x:Bind ViewModel.FormattedSelectedSize, Mode=OneWay}" Foreground="{StaticResource SuccessBrush}"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                        <Border CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="SCAN" Command="{x:Bind ViewModel.ScanCommand}"
                                    Style="{StaticResource OutlinedButtonStyle}" Background="#000000"
                                    IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"/>
                        </Border>
                        <Border CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="CLEAN SELECTED" Command="{x:Bind ViewModel.CleanCommand}"
                                    Style="{StaticResource RedButtonStyle}"
                                    IsEnabled="{x:Bind ViewModel.HasResults, Mode=OneWay}"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Risk Filter -->
            <Border Style="{StaticResource CardStyle}" Padding="12">
                <StackPanel Orientation="Horizontal" Spacing="24">
                    <TextBlock Text="Show:" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <CheckBox Content="Safe (Cache)" IsChecked="{x:Bind ViewModel.ShowSafeItems, Mode=TwoWay}"/>
                    <CheckBox Content="Low Risk (History)" IsChecked="{x:Bind ViewModel.ShowLowRiskItems, Mode=TwoWay}"/>
                    <CheckBox Content="Medium Risk (Cookies)" IsChecked="{x:Bind ViewModel.ShowMediumRiskItems, Mode=TwoWay}"/>
                    <CheckBox Content="High Risk (Passwords)" IsChecked="{x:Bind ViewModel.ShowHighRiskItems, Mode=TwoWay}"
                              Foreground="{StaticResource ErrorBrush}"/>
                    <Button Content="Select Safe Only" Command="{x:Bind ViewModel.SelectSafeItemsCommand}"
                            Style="{StaticResource OutlinedButtonStyle}" Margin="24,0,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Browser Data List -->
        <Grid Grid.Row="2" RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="BROWSER DATA" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.BrowserGroups, Mode=OneWay}" Background="Transparent">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0,4,0,4"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay}" HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Stretch">
                            <Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <FontIcon Grid.Column="0" Glyph="{Binding BrowserIcon}" FontSize="24"
                                              Foreground="{StaticResource PrimaryBrush}" Margin="0,0,12,0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding BrowserName}"
                                               Style="{StaticResource CardTitleStyle}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding FormattedSize}"
                                               Foreground="{StaticResource WarningBrush}" FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Expander.Header>
                            <Expander.Content>
                                <ItemsControl ItemsSource="{Binding Items}" Margin="24,8,0,8">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource CardStyle}" Padding="12" Margin="0,4,0,4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                              VerticalAlignment="Center"/>

                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                                                        <TextBlock Text="{Binding DisplayName}" Style="{StaticResource CardTitleStyle}"/>
                                                        <TextBlock Text="{Binding Description}" Style="{StaticResource CardSubtitleStyle}"/>
                                                    </StackPanel>

                                                    <Border Grid.Column="2" CornerRadius="4" Padding="8,4"
                                                            Background="{StaticResource CardBrush}" Margin="8,0">
                                                        <TextBlock Text="{Binding RiskLevel}" FontSize="11"/>
                                                    </Border>

                                                    <TextBlock Grid.Column="3" Text="{Binding FormattedSize}"
                                                               Foreground="{StaticResource WarningBrush}"
                                                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Expander.Content>
                        </Expander>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <ProgressBar Grid.Row="3" IsIndeterminate="True" Foreground="{StaticResource PrimaryBrush}"
                     Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</Page>
