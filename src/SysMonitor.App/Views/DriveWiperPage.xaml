<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.DriveWiperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Header Banner -->
        <Border Grid.Row="0" Background="#000000" Padding="24" Margin="-24,-24,-24,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="DRIVE WIPER" Style="{StaticResource PageHeaderStyle}"
                               Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                    <TextBlock Text="Securely Delete Files Beyond Recovery" Style="{StaticResource PageSubtitleStyle}"
                               Foreground="#AAFFFFFF" HorizontalAlignment="Left"/>
                </StackPanel>

                <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                       Height="80" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform"/>
            </Grid>
        </Border>

        <!-- Controls Section -->
        <StackPanel Grid.Row="1" Spacing="12">
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="SECURE DELETION" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource IconContainerRedStyle}" Margin="0,0,16,0">
                        <FontIcon Glyph="&#xE74D;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" Style="{StaticResource CardTitleStyle}"/>
                        <TextBlock Text="{x:Bind ViewModel.MethodDescription, Mode=OneWay}"
                                   Style="{StaticResource CardSubtitleStyle}" TextWrapping="Wrap" MaxWidth="400"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                        <Border CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="ADD FILES" Command="{x:Bind ViewModel.AddFilesCommand}"
                                    Style="{StaticResource OutlinedButtonStyle}" Background="#000000"/>
                        </Border>
                        <Border CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="ADD FOLDER" Command="{x:Bind ViewModel.AddFolderCommand}"
                                    Style="{StaticResource OutlinedButtonStyle}" Background="#000000"/>
                        </Border>
                        <Border CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="WIPE NOW" Command="{x:Bind ViewModel.WipeFilesCommand}"
                                    Style="{StaticResource RedButtonStyle}"
                                    IsEnabled="{x:Bind ViewModel.HasFiles, Mode=OneWay}"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Wipe Method Selection -->
            <Border Style="{StaticResource CardStyle}" Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Wipe Method:" VerticalAlignment="Center"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,16,0"/>
                    <ComboBox Grid.Column="1" ItemsSource="{x:Bind ViewModel.WipeMethods}"
                              SelectedValue="{x:Bind ViewModel.SelectedMethod, Mode=TwoWay}"
                              SelectedValuePath="Method" DisplayMemberPath="Name"
                              HorizontalAlignment="Stretch"/>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Files List -->
        <Grid Grid.Row="2" RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                    <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                    <TextBlock Text="FILES TO WIPE" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                </StackPanel>
                <Button Content="Clear All" Command="{x:Bind ViewModel.ClearAllCommand}"
                        Style="{StaticResource OutlinedButtonStyle}" HorizontalAlignment="Right"
                        IsEnabled="{x:Bind ViewModel.HasFiles, Mode=OneWay}"/>
            </Grid>

            <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.FilesToWipe, Mode=OneWay}" Background="Transparent">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0,4,0,4"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource IconContainerStyle}"
                                        Width="40" Height="40" Margin="0,0,12,0">
                                    <FontIcon Glyph="{Binding Icon}" FontSize="16"
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" Style="{StaticResource CardTitleStyle}"/>
                                    <TextBlock Text="{Binding Path}" Style="{StaticResource CardSubtitleStyle}"
                                               TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                                    <TextBlock Text="{Binding Error}" Foreground="{StaticResource ErrorBrush}"
                                               FontSize="11" Visibility="{Binding Error, Converter={StaticResource NullToVisibilityConverter}}"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="{Binding FormattedSize}"
                                           Foreground="{StaticResource WarningBrush}" FontWeight="SemiBold"
                                           VerticalAlignment="Center" Margin="16,0"/>

                                <Button Grid.Column="3" Style="{StaticResource OutlinedButtonStyle}"
                                        Command="{Binding DataContext.RemoveFileCommand, ElementName=FilesToWipe}"
                                        CommandParameter="{Binding}" Padding="8">
                                    <FontIcon Glyph="&#xE711;" FontSize="12"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Empty State -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{x:Bind ViewModel.HasFiles, Mode=OneWay, Converter={StaticResource InvertBoolToVisibilityConverter}}">
                <FontIcon Glyph="&#xE74D;" FontSize="48" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="No files added" Style="{StaticResource CardTitleStyle}"
                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
                <TextBlock Text="Add files or folders to securely delete them" Style="{StaticResource CardSubtitleStyle}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Progress Section -->
        <Grid Grid.Row="3" Visibility="{x:Bind ViewModel.IsWiping, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Style="{StaticResource CardStyle}" Padding="12">
                <StackPanel Spacing="8">
                    <Grid>
                        <TextBlock Text="{x:Bind ViewModel.CurrentFile, Mode=OneWay}" Style="{StaticResource CardSubtitleStyle}"/>
                        <TextBlock HorizontalAlignment="Right" Foreground="{StaticResource TextSecondaryBrush}">
                            <Run Text="{x:Bind ViewModel.CompletedFiles, Mode=OneWay}"/>
                            <Run Text=" / "/>
                            <Run Text="{x:Bind ViewModel.TotalFiles, Mode=OneWay}"/>
                        </TextBlock>
                    </Grid>
                    <ProgressBar Value="{x:Bind ViewModel.Progress, Mode=OneWay}" Maximum="100"
                                 Foreground="{StaticResource PrimaryBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
