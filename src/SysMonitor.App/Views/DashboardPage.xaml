<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="0,0,0,24" Spacing="16">

            <!-- Page Header Banner - AMOLED pure black with left header, centered logo -->
            <Border Background="#000000" Padding="24" Margin="-24,-24,-24,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Header text -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="SYSTEM MONITOR" Style="{StaticResource PageHeaderStyle}"
                                   Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                        <TextBlock Text="Strategic. Excellence. Engineered." Style="{StaticResource PageSubtitleStyle}"
                                   Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                    </StackPanel>

                    <!-- Center: STX.1 Home Logo -->
                    <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                           Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Stretch="Uniform"/>
                </Grid>
            </Border>

            <!-- Quick Access Section Header -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="QUICK ACCESS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Quick Access Grid - 2x3 layout with live stats -->
            <Grid ColumnSpacing="12" RowSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Network Monitor Card -->
                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource StatCardStyle}" Padding="16">
                    <Grid RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource MenuCardIconStyle}">
                                <FontIcon Glyph="&#xE774;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <TextBlock Text="NETWORK" Style="{StaticResource StatLabelStyle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Spacing="2">
                            <TextBlock Foreground="{StaticResource SuccessBrush}" FontSize="12">
                                <Run Text="↓"/>
                                <Run Text="{x:Bind ViewModel.DownloadSpeed, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource CyanAccentBrush}" FontSize="12">
                                <Run Text="↑"/>
                                <Run Text="{x:Bind ViewModel.UploadSpeed, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                        <TextBlock Grid.Row="2" Text="{x:Bind ViewModel.ConnectionType, Mode=OneWay}"
                                   Style="{StaticResource MenuItemSubtitleStyle}" FontSize="11"/>
                    </Grid>
                </Border>

                <!-- Temperature Card -->
                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource StatCardStyle}" Padding="16">
                    <Grid RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource MenuCardIconStyle}">
                                <FontIcon Glyph="&#xE9CA;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <TextBlock Text="TEMPERATURE" Style="{StaticResource StatLabelStyle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Row="1" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}">
                            <Run Text="{x:Bind ViewModel.CpuTemperature, Mode=OneWay, Converter={StaticResource CelsiusToFahrenheitConverter}}"/>
                            <Run Text="°F" FontSize="14"/>
                        </TextBlock>
                        <TextBlock Grid.Row="2" Text="{x:Bind ViewModel.CpuTempStatus, Mode=OneWay}"
                                   Style="{StaticResource MenuItemSubtitleStyle}" FontSize="11"/>
                    </Grid>
                </Border>

                <!-- System Info Card -->
                <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource StatCardStyle}" Padding="16">
                    <Grid RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource MenuCardIconStyle}">
                                <FontIcon Glyph="&#xE7F4;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <TextBlock Text="SYSTEM INFO" Style="{StaticResource StatLabelStyle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Row="1" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}">
                            <Run Text="Uptime:"/>
                            <Run Text="{x:Bind ViewModel.Uptime, Mode=OneWay}" Foreground="{StaticResource CyanAccentBrush}"/>
                        </TextBlock>
                        <TextBlock Grid.Row="2" Text="Health &amp; Specs"
                                   Style="{StaticResource MenuItemSubtitleStyle}" FontSize="11"/>
                    </Grid>
                </Border>

                <!-- Disk Analyzer Card -->
                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource StatCardStyle}" Padding="16">
                    <Grid RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource MenuCardIconStyle}">
                                <FontIcon Glyph="&#xEDA2;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <TextBlock Text="DISK" Style="{StaticResource StatLabelStyle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Row="1" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}">
                            <Run Text="{x:Bind ViewModel.DiskUsage, Mode=OneWay, Converter={StaticResource PercentConverter}}"/>
                            <Run Text="%" FontSize="14"/>
                        </TextBlock>
                        <TextBlock Grid.Row="2" Style="{StaticResource MenuItemSubtitleStyle}" FontSize="11">
                            <Run Text="{x:Bind ViewModel.DriveCount, Mode=OneWay}"/>
                            <Run Text="drives detected"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Battery Card (or Cleaner if no battery) -->
                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource StatCardStyle}" Padding="16"
                        Visibility="{x:Bind ViewModel.HasBattery, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource MenuCardIconStyle}">
                                <FontIcon Glyph="&#xE83F;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <TextBlock Text="BATTERY" Style="{StaticResource StatLabelStyle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Row="1" FontSize="24" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}">
                            <Run Text="{x:Bind ViewModel.BatteryLevel, Mode=OneWay}"/>
                            <Run Text="%" FontSize="14"/>
                        </TextBlock>
                        <TextBlock Grid.Row="2" Text="{x:Bind ViewModel.BatteryStatus, Mode=OneWay}"
                                   Style="{StaticResource MenuItemSubtitleStyle}" FontSize="11"/>
                    </Grid>
                </Border>

                <!-- Cleaner Card (shown when no battery) -->
                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource StatCardStyle}" Padding="16"
                        Visibility="{x:Bind ViewModel.HasBattery, Mode=OneWay, Converter={StaticResource InvertBoolToVisibilityConverter}}">
                    <Grid RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource MenuCardIconStyle}">
                                <FontIcon Glyph="&#xE74D;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <TextBlock Text="CLEANER" Style="{StaticResource StatLabelStyle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Row="1" FontSize="18" FontWeight="Bold" Foreground="{StaticResource WarningBrush}">
                            <Run Text="{x:Bind ViewModel.CleanableSpaceMB, Mode=OneWay, Converter={StaticResource MBConverter}}"/>
                        </TextBlock>
                        <TextBlock Grid.Row="2" Text="Cleanable space"
                                   Style="{StaticResource MenuItemSubtitleStyle}" FontSize="11"/>
                    </Grid>
                </Border>

                <!-- Process Monitor Card -->
                <Border Grid.Column="2" Grid.Row="1" Style="{StaticResource StatCardStyle}" Padding="16">
                    <Grid RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource MenuCardIconStyle}">
                                <FontIcon Glyph="&#xE8A5;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <TextBlock Text="PROCESSES" Style="{StaticResource StatLabelStyle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Row="1" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}">
                            <Run Text="CPU:"/>
                            <Run Text="{x:Bind ViewModel.CpuUsage, Mode=OneWay, Converter={StaticResource PercentConverter}}" Foreground="{StaticResource PrimaryBrush}"/>
                            <Run Text="%"/>
                        </TextBlock>
                        <TextBlock Grid.Row="2" Text="Monitor &amp; manage apps"
                                   Style="{StaticResource MenuItemSubtitleStyle}" FontSize="11"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Health Score Section Header -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}" Margin="0,8,0,0">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="SYSTEM HEALTH" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Health Score Hero Card -->
            <Border Style="{StaticResource HeroStatCardStyle}">
                <StackPanel Spacing="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Health Score Display -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="CURRENT HEALTH SCORE" Style="{StaticResource StatLabelStyle}"
                                       Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="{x:Bind ViewModel.HealthScore, Mode=OneWay}"
                                           Style="{StaticResource LargeStatValueStyle}"/>
                                <TextBlock Text="%" VerticalAlignment="Bottom" Margin="0,0,0,12"
                                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="24"/>
                            </StackPanel>
                            <TextBlock Text="{x:Bind ViewModel.HealthStatus, Mode=OneWay}"
                                       Style="{StaticResource StatusGoodStyle}" FontSize="14"/>
                        </StackPanel>

                        <!-- Quick Actions -->
                        <StackPanel Grid.Column="2" Spacing="8" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <!-- QUICK CLEAN with chrome bezel -->
                                <Border CornerRadius="26" Padding="2">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#707070" Offset="0.0"/>
                                            <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                            <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                            <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                            <GradientStop Color="#505050" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Button Content="QUICK CLEAN" Command="{x:Bind ViewModel.QuickCleanCommand}"
                                            Style="{StaticResource RedButtonStyle}"
                                            IsEnabled="{x:Bind ViewModel.IsOptimizing, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"/>
                                </Border>
                                <!-- BOOST RAM with chrome bezel -->
                                <Border CornerRadius="26" Padding="2">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#707070" Offset="0.0"/>
                                            <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                            <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                            <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                            <GradientStop Color="#505050" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Button Content="BOOST RAM" Command="{x:Bind ViewModel.OptimizeMemoryCommand}"
                                            Style="{StaticResource OutlinedButtonStyle}"
                                            Background="#000000"
                                            IsEnabled="{x:Bind ViewModel.IsOptimizing, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"/>
                                </Border>
                                <!-- EXPORT with chrome bezel -->
                                <Border CornerRadius="26" Padding="2">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#707070" Offset="0.0"/>
                                            <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                            <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                            <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                            <GradientStop Color="#505050" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Button Command="{x:Bind ViewModel.ExportReportCommand}"
                                            Style="{StaticResource OutlinedButtonStyle}"
                                            Background="#000000"
                                            IsEnabled="{x:Bind ViewModel.IsOptimizing, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"
                                            ToolTipService.ToolTip="Export System Report">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE78C;" FontSize="14"/>
                                            <TextBlock Text="EXPORT"/>
                                        </StackPanel>
                                    </Button>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Action Status Banner -->
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16,12"
                            Visibility="{x:Bind ViewModel.HasActionStatus, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <ProgressRing IsActive="{x:Bind ViewModel.IsOptimizing, Mode=OneWay}" Width="20" Height="20"
                                          Visibility="{x:Bind ViewModel.IsOptimizing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <FontIcon Glyph="&#xE73E;" FontSize="16" Foreground="{StaticResource SuccessBrush}"
                                      Visibility="{x:Bind ViewModel.IsOptimizing, Mode=OneWay, Converter={StaticResource InvertBoolToVisibilityConverter}}"/>
                            <TextBlock Text="{x:Bind ViewModel.ActionStatus, Mode=OneWay}"
                                       Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- System Resources Section Header -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="SYSTEM RESOURCES" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Stats Grid -->
            <Grid ColumnSpacing="12" RowSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CPU Card -->
                <Border Grid.Column="0" Style="{StaticResource PremiumStatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource IconContainerRedStyle}">
                                <FontIcon Glyph="&#xE950;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="CPU" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="Processor Usage" Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Style="{StaticResource StatValueStyle}" Margin="0,16,0,0">
                            <Run Text="{x:Bind ViewModel.CpuUsage, Mode=OneWay, Converter={StaticResource PercentConverter}}"/>
                            <Run Text="%" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </TextBlock>

                        <ProgressBar Grid.Row="2" Value="{x:Bind ViewModel.CpuUsage, Mode=OneWay}"
                                     Maximum="100" Style="{StaticResource PremiumProgressBarStyle}"/>
                    </Grid>
                </Border>

                <!-- Memory Card -->
                <Border Grid.Column="1" Style="{StaticResource PremiumStatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource IconContainerRedStyle}">
                                <FontIcon Glyph="&#xE964;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="MEMORY" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="RAM Usage" Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Style="{StaticResource StatValueStyle}" Margin="0,16,0,0">
                            <Run Text="{x:Bind ViewModel.MemoryUsage, Mode=OneWay, Converter={StaticResource PercentConverter}}"/>
                            <Run Text="%" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </TextBlock>

                        <ProgressBar Grid.Row="2" Value="{x:Bind ViewModel.MemoryUsage, Mode=OneWay}"
                                     Maximum="100" Style="{StaticResource PremiumProgressBarStyle}"/>

                        <TextBlock Grid.Row="3" Style="{StaticResource CardSubtitleStyle}" Margin="0,8,0,0">
                            <Run Text="{x:Bind ViewModel.MemoryUsedGB, Mode=OneWay, Converter={StaticResource GBConverter}}"/>
                            <Run Text="/"/>
                            <Run Text="{x:Bind ViewModel.MemoryTotalGB, Mode=OneWay, Converter={StaticResource GBConverter}}"/>
                            <Run Text="GB"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Disk Card -->
                <Border Grid.Column="2" Style="{StaticResource PremiumStatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource IconContainerRedStyle}">
                                <FontIcon Glyph="&#xEDA2;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="DISK (C:)" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="Storage Usage" Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Style="{StaticResource StatValueStyle}" Margin="0,16,0,0">
                            <Run Text="{x:Bind ViewModel.DiskUsage, Mode=OneWay, Converter={StaticResource PercentConverter}}"/>
                            <Run Text="%" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </TextBlock>

                        <ProgressBar Grid.Row="2" Value="{x:Bind ViewModel.DiskUsage, Mode=OneWay}"
                                     Maximum="100" Style="{StaticResource CyanProgressBarStyle}"/>

                        <TextBlock Grid.Row="3" Style="{StaticResource CardSubtitleStyle}" Margin="0,8,0,0">
                            <Run Text="{x:Bind ViewModel.DiskUsedGB, Mode=OneWay, Converter={StaticResource GBConverter}}"/>
                            <Run Text="/"/>
                            <Run Text="{x:Bind ViewModel.DiskTotalGB, Mode=OneWay, Converter={StaticResource GBConverter}}"/>
                            <Run Text="GB"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Battery Card -->
                <Border Grid.Column="3" Style="{StaticResource PremiumStatCardStyle}"
                        Visibility="{x:Bind ViewModel.HasBattery, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource IconContainerRedStyle}">
                                <FontIcon Glyph="&#xE83F;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="BATTERY" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="Power Level" Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Style="{StaticResource StatValueStyle}" Margin="0,16,0,0"
                                   Foreground="{StaticResource SuccessBrush}">
                            <Run Text="{x:Bind ViewModel.BatteryLevel, Mode=OneWay}"/>
                            <Run Text="%" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </TextBlock>

                        <ProgressBar Grid.Row="2" Value="{x:Bind ViewModel.BatteryLevel, Mode=OneWay}"
                                     Maximum="100" Style="{StaticResource GreenProgressBarStyle}"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- System Information Section Header -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}" Margin="0,8,0,0">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="SYSTEM INFORMATION" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- System Info Card -->
            <Border Style="{StaticResource CardStyle}">
                <Grid RowSpacing="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- OS Info -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE770;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="OPERATING SYSTEM" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.OsName, Mode=OneWay}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Uptime -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE916;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="UPTIME" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.Uptime, Mode=OneWay}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Cleanable Space -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE74D;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="CLEANABLE SPACE" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Foreground="{StaticResource WarningBrush}">
                                <Run Text="{x:Bind ViewModel.CleanableSpaceMB, Mode=OneWay, Converter={StaticResource MBConverter}}"/>
                                <Run Text="MB"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Footer with Strategia-X branding -->
            <StackPanel HorizontalAlignment="Center" Spacing="8" Margin="0,16,0,0">
                <Image Source="ms-appx:///Assets/Header_Main1.png"
                       Height="16" HorizontalAlignment="Center"
                       Stretch="Uniform" Opacity="0.7"/>
                <TextBlock Text="Powered by Strategia-X Technology"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource PrimaryBrush}"
                           FontSize="12"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
