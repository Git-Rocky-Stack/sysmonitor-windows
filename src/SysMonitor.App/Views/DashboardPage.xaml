<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="0,0,0,24" Spacing="16">

            <!-- Page Header Banner -->
            <Border Style="{StaticResource HeaderBannerStyle}">
                <StackPanel>
                    <TextBlock Text="DASHBOARD" Style="{StaticResource PageHeaderStyle}"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="System Overview &amp; Quick Actions" Style="{StaticResource PageSubtitleStyle}"
                               Foreground="#AAFFFFFF"/>
                </StackPanel>
            </Border>

            <!-- Health Score Hero Card -->
            <Border Style="{StaticResource CardStyle}" Padding="24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Health Score Display -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="CURRENT HEALTH SCORE" Style="{StaticResource StatLabelStyle}"
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="{x:Bind ViewModel.HealthScore, Mode=OneWay}"
                                       Style="{StaticResource LargeStatValueStyle}"/>
                            <TextBlock Text="%" VerticalAlignment="Bottom" Margin="0,0,0,12"
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="24"/>
                        </StackPanel>
                        <TextBlock Text="{x:Bind ViewModel.HealthStatus, Mode=OneWay}"
                                   Style="{StaticResource StatusGoodStyle}" FontSize="14"/>
                    </StackPanel>

                    <!-- Quick Actions -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <Button Content="QUICK CLEAN" Command="{x:Bind ViewModel.QuickCleanCommand}"
                                Style="{StaticResource RedButtonStyle}"
                                IsEnabled="{x:Bind ViewModel.IsOptimizing, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"/>
                        <Button Content="OPTIMIZE MEMORY" Command="{x:Bind ViewModel.OptimizeMemoryCommand}"
                                Style="{StaticResource OutlinedButtonStyle}"
                                IsEnabled="{x:Bind ViewModel.IsOptimizing, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- System Resources Section Header -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="SYSTEM RESOURCES" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Stats Grid -->
            <Grid ColumnSpacing="12" RowSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CPU Card -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource IconContainerRedStyle}">
                                <FontIcon Glyph="&#xE950;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="CPU" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="Processor Usage" Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Style="{StaticResource StatValueStyle}" Margin="0,16,0,0">
                            <Run Text="{x:Bind ViewModel.CpuUsage, Mode=OneWay, Converter={StaticResource PercentConverter}}"/>
                            <Run Text="%" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </TextBlock>

                        <ProgressBar Grid.Row="2" Value="{x:Bind ViewModel.CpuUsage, Mode=OneWay}"
                                     Maximum="100" Style="{StaticResource RedProgressBarStyle}"/>
                    </Grid>
                </Border>

                <!-- Memory Card -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource IconContainerRedStyle}">
                                <FontIcon Glyph="&#xE964;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="MEMORY" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="RAM Usage" Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Style="{StaticResource StatValueStyle}" Margin="0,16,0,0">
                            <Run Text="{x:Bind ViewModel.MemoryUsage, Mode=OneWay, Converter={StaticResource PercentConverter}}"/>
                            <Run Text="%" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </TextBlock>

                        <ProgressBar Grid.Row="2" Value="{x:Bind ViewModel.MemoryUsage, Mode=OneWay}"
                                     Maximum="100" Style="{StaticResource RedProgressBarStyle}"/>

                        <TextBlock Grid.Row="3" Style="{StaticResource CardSubtitleStyle}" Margin="0,8,0,0">
                            <Run Text="{x:Bind ViewModel.MemoryUsedGB, Mode=OneWay, Converter={StaticResource GBConverter}}"/>
                            <Run Text="/"/>
                            <Run Text="{x:Bind ViewModel.MemoryTotalGB, Mode=OneWay, Converter={StaticResource GBConverter}}"/>
                            <Run Text="GB"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Disk Card -->
                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource IconContainerRedStyle}">
                                <FontIcon Glyph="&#xEDA2;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="DISK (C:)" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="Storage Usage" Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Style="{StaticResource StatValueStyle}" Margin="0,16,0,0">
                            <Run Text="{x:Bind ViewModel.DiskUsage, Mode=OneWay, Converter={StaticResource PercentConverter}}"/>
                            <Run Text="%" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </TextBlock>

                        <ProgressBar Grid.Row="2" Value="{x:Bind ViewModel.DiskUsage, Mode=OneWay}"
                                     Maximum="100" Style="{StaticResource RedProgressBarStyle}"/>

                        <TextBlock Grid.Row="3" Style="{StaticResource CardSubtitleStyle}" Margin="0,8,0,0">
                            <Run Text="{x:Bind ViewModel.DiskUsedGB, Mode=OneWay, Converter={StaticResource GBConverter}}"/>
                            <Run Text="/"/>
                            <Run Text="{x:Bind ViewModel.DiskTotalGB, Mode=OneWay, Converter={StaticResource GBConverter}}"/>
                            <Run Text="GB"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Battery Card -->
                <Border Grid.Column="3" Style="{StaticResource StatCardStyle}"
                        Visibility="{x:Bind ViewModel.HasBattery, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource IconContainerRedStyle}">
                                <FontIcon Glyph="&#xE83F;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="BATTERY" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="Power Level" Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Style="{StaticResource StatValueStyle}" Margin="0,16,0,0"
                                   Foreground="{StaticResource SuccessBrush}">
                            <Run Text="{x:Bind ViewModel.BatteryLevel, Mode=OneWay}"/>
                            <Run Text="%" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </TextBlock>

                        <ProgressBar Grid.Row="2" Value="{x:Bind ViewModel.BatteryLevel, Mode=OneWay}"
                                     Maximum="100" Style="{StaticResource GreenProgressBarStyle}"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- System Information Section Header -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}" Margin="0,8,0,0">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="SYSTEM INFORMATION" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- System Info Card -->
            <Border Style="{StaticResource CardStyle}">
                <Grid RowSpacing="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- OS Info -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE770;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="OPERATING SYSTEM" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.OsName, Mode=OneWay}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Uptime -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE916;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="UPTIME" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.Uptime, Mode=OneWay}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Cleanable Space -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE74D;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="CLEANABLE SPACE" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Foreground="{StaticResource WarningBrush}">
                                <Run Text="{x:Bind ViewModel.CleanableSpaceMB, Mode=OneWay, Converter={StaticResource MBConverter}}"/>
                                <Run Text="MB"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Footer -->
            <TextBlock Text="Powered by Strategia-X Technology"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource PrimaryBrush}"
                       FontSize="12" Margin="0,16,0,0"/>

        </StackPanel>
    </ScrollViewer>
</Page>
