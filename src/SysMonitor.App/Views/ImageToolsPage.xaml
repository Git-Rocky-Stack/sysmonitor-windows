<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.ImageToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utilities="using:SysMonitor.Core.Services.Utilities"
    xmlns:vm="using:SysMonitor.App.ViewModels"
    Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="0,0,0,24" Spacing="16">

            <!-- Page Header Banner -->
            <Border Style="{StaticResource HeaderBannerStyle}">
                <StackPanel HorizontalAlignment="Center" Spacing="8">
                    <FontIcon Glyph="&#xEB9F;" FontSize="48" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="IMAGE TOOLS" Style="{StaticResource PageHeaderStyle}"
                               Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Compress, convert, and resize images" Style="{StaticResource PageSubtitleStyle}"
                               Foreground="#AAFFFFFF" HorizontalAlignment="Center" Margin="0"/>
                </StackPanel>
            </Border>

            <!-- Image Selection Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="SELECT IMAGES" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}" Padding="24">
                <Grid RowSpacing="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Selection Buttons -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                        <Button Command="{x:Bind ViewModel.SelectSingleImageCommand}" Style="{StaticResource OutlineButtonStyle}"
                                Width="180">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8B9;" FontSize="16"/>
                                <TextBlock Text="SELECT IMAGE"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{x:Bind ViewModel.SelectImagesCommand}" Style="{StaticResource OutlineButtonStyle}"
                                Width="180">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8F1;" FontSize="16"/>
                                <TextBlock Text="SELECT MULTIPLE"/>
                            </StackPanel>
                        </Button>
                        <Button Content="CLEAR" Command="{x:Bind ViewModel.ClearSelectionCommand}"
                                Style="{StaticResource OutlineButtonStyle}"
                                Visibility="{x:Bind ViewModel.HasSelectedImages, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Selected Images Summary -->
                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16"
                            Visibility="{x:Bind ViewModel.HasSelectedImages, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Width="48" Height="48" CornerRadius="8"
                                    Background="{StaticResource CyanAccentBrush}">
                                <FontIcon Glyph="&#xEB9F;" FontSize="24" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock FontWeight="SemiBold" FontSize="16"
                                           Foreground="{StaticResource TextPrimaryBrush}">
                                    <Run Text="{x:Bind ViewModel.SelectedImagesCount, Mode=OneWay}"/>
                                    <Run Text=" image(s) selected"/>
                                </TextBlock>
                                <TextBlock Text="Supported: JPG, PNG, BMP, GIF"
                                           Style="{StaticResource CardSubtitleStyle}" FontSize="11"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="TOTAL SIZE" Style="{StaticResource StatLabelStyle}"
                                           HorizontalAlignment="Right"/>
                                <TextBlock Text="{x:Bind ViewModel.TotalSelectedSize, Mode=OneWay}"
                                           Foreground="{StaticResource CyanAccentBrush}"
                                           FontWeight="Bold" FontSize="18"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Image Info (single image) -->
                    <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16"
                            Visibility="{x:Bind ViewModel.HasImageInfo, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid ColumnSpacing="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="DIMENSIONS" Style="{StaticResource StatLabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.CurrentImageInfo.Dimensions, Mode=OneWay}"
                                           FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="FORMAT" Style="{StaticResource StatLabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.CurrentImageInfo.Format, Mode=OneWay}"
                                           FontWeight="Bold" FontSize="14" Foreground="{StaticResource CyanAccentBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="COLOR DEPTH" Style="{StaticResource StatLabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.CurrentImageInfo.ColorDepth, Mode=OneWay}"
                                           FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="RESOLUTION" Style="{StaticResource StatLabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.CurrentImageInfo.Resolution, Mode=OneWay}"
                                           FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Action Feedback -->
            <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16"
                    Visibility="{x:Bind ViewModel.HasActionStatus, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon Grid.Column="0" Glyph="&#xE73E;" FontSize="20">
                        <FontIcon.Foreground>
                            <SolidColorBrush Color="{x:Bind ViewModel.ActionStatusColor, Mode=OneWay}"/>
                        </FontIcon.Foreground>
                    </FontIcon>
                    <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.ActionStatus, Mode=OneWay}"
                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                </Grid>
            </Border>

            <!-- Operations Grid -->
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Compress Card -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="20">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Width="48" Height="48" CornerRadius="8"
                                    Background="{StaticResource SuccessBrush}">
                                <FontIcon Glyph="&#xE81E;" FontSize="24"
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="COMPRESS" FontWeight="Bold" FontSize="16"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Reduce file size"
                                           Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Quality:" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <Grid ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Minimum="10" Maximum="100"
                                        Value="{x:Bind ViewModel.CompressionQuality, Mode=TwoWay}"/>
                                <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                           Foreground="{StaticResource CyanAccentBrush}" FontWeight="Bold">
                                    <Run Text="{x:Bind ViewModel.CompressionQuality, Mode=OneWay}"/>
                                    <Run Text="%"/>
                                </TextBlock>
                            </Grid>
                        </StackPanel>

                        <Button Content="COMPRESS" Command="{x:Bind ViewModel.CompressCommand}"
                                Style="{StaticResource RedButtonStyle}" HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.HasSelectedImages, Mode=OneWay}">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE81E;" FontSize="14"/>
                                        <TextBlock Text="COMPRESS"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Convert Card -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Padding="20">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Width="48" Height="48" CornerRadius="8"
                                    Background="{StaticResource CyanAccentBrush}">
                                <FontIcon Glyph="&#xE8AB;" FontSize="24"
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="CONVERT" FontWeight="Bold" FontSize="16"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Change image format"
                                           Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Target Format:" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <ComboBox ItemsSource="{x:Bind ViewModel.ImageFormats}"
                                      SelectedItem="{x:Bind ViewModel.SelectedFormat, Mode=TwoWay}"
                                      HorizontalAlignment="Stretch"/>
                        </StackPanel>

                        <Button Content="CONVERT" Command="{x:Bind ViewModel.ConvertCommand}"
                                Style="{StaticResource OutlineButtonStyle}" HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.HasSelectedImages, Mode=OneWay}">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE8AB;" FontSize="14"/>
                                        <TextBlock Text="CONVERT"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Resize Card -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Padding="20">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Width="48" Height="48" CornerRadius="8"
                                    Background="#9C27B0">
                                <FontIcon Glyph="&#xE799;" FontSize="24"
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="RESIZE" FontWeight="Bold" FontSize="16"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Change dimensions"
                                           Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <Grid ColumnSpacing="8" RowSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <NumberBox Grid.Column="0" Grid.Row="0" Header="Width"
                                       Value="{x:Bind ViewModel.ResizeWidth, Mode=TwoWay}"
                                       Minimum="1" Maximum="10000" SpinButtonPlacementMode="Compact"/>
                            <TextBlock Grid.Column="1" Grid.Row="0" Text="x" VerticalAlignment="Bottom"
                                       Margin="0,0,0,8" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <NumberBox Grid.Column="2" Grid.Row="0" Header="Height"
                                       Value="{x:Bind ViewModel.ResizeHeight, Mode=TwoWay}"
                                       Minimum="1" Maximum="10000" SpinButtonPlacementMode="Compact"/>

                            <CheckBox Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"
                                      Content="Maintain aspect ratio"
                                      IsChecked="{x:Bind ViewModel.MaintainAspectRatio, Mode=TwoWay}"
                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Grid>

                        <Button Content="RESIZE" Command="{x:Bind ViewModel.ResizeCommand}"
                                Style="{StaticResource OutlineButtonStyle}" HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.HasSelectedImages, Mode=OneWay}">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE799;" FontSize="14"/>
                                        <TextBlock Text="RESIZE"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Processing Indicator -->
            <Border Style="{StaticResource CardStyle}" Padding="20"
                    Visibility="{x:Bind ViewModel.IsProcessing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
                        <ProgressRing IsActive="True" Width="24" Height="24"/>
                        <TextBlock Text="{x:Bind ViewModel.ProcessingStatus, Mode=OneWay}"
                                   VerticalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    <ProgressBar Value="{x:Bind ViewModel.ProcessingProgress, Mode=OneWay}"
                                 Maximum="100" Height="4"/>
                </StackPanel>
            </Border>

            <!-- Result Section -->
            <Border Style="{StaticResource CardStyle}" Padding="24"
                    Visibility="{x:Bind ViewModel.HasResult, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE73E;" FontSize="28" Foreground="{StaticResource SuccessBrush}"/>
                        <TextBlock Text="OPERATION COMPLETE" FontWeight="Bold" FontSize="18"
                                   VerticalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="FILES PROCESSED" Style="{StaticResource StatLabelStyle}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.FilesProcessed, Mode=OneWay}"
                                           FontWeight="Bold" FontSize="20"
                                           Foreground="{StaticResource CyanAccentBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ORIGINAL SIZE" Style="{StaticResource StatLabelStyle}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.ResultOriginalSize, Mode=OneWay}"
                                           FontWeight="Bold" FontSize="20"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="NEW SIZE" Style="{StaticResource StatLabelStyle}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.ResultNewSize, Mode=OneWay}"
                                           FontWeight="Bold" FontSize="20"
                                           Foreground="{StaticResource SuccessBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="3" Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8" Padding="16">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="SPACE SAVED" Style="{StaticResource StatLabelStyle}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.ResultSaved, Mode=OneWay}"
                                           FontWeight="Bold" FontSize="20"
                                           Foreground="{StaticResource CyanAccentBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Button Content="OPEN OUTPUT FOLDER" Command="{x:Bind ViewModel.OpenOutputFolderCommand}"
                            Style="{StaticResource OutlineButtonStyle}" HorizontalAlignment="Center">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE838;" FontSize="14"/>
                                    <TextBlock Text="OPEN OUTPUT FOLDER"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Tips Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="IMAGE TIPS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}" Padding="20">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xEB9F;" Foreground="{StaticResource CyanAccentBrush}" FontSize="18"/>
                        <TextBlock Text="JPEG is best for photos - offers good compression with minimal quality loss"
                                   Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE81E;" Foreground="{StaticResource CyanAccentBrush}" FontSize="18"/>
                        <TextBlock Text="PNG preserves transparency and is ideal for graphics and logos"
                                   Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE799;" Foreground="{StaticResource CyanAccentBrush}" FontSize="18"/>
                        <TextBlock Text="Lower quality settings result in smaller files but may introduce artifacts"
                                   Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Footer -->
            <StackPanel HorizontalAlignment="Center" Spacing="8" Margin="0,16,0,0">
                <Image Source="ms-appx:///Assets/Header_Main1.png"
                       Height="16" HorizontalAlignment="Center"
                       Stretch="Uniform" Opacity="0.7"/>
                <TextBlock Text="Powered by Strategia-X Technology"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource PrimaryBrush}"
                           FontSize="12"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
