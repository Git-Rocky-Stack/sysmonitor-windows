<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.NetworkMapperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SysMonitor.App.Views"
    xmlns:vm="using:SysMonitor.App.ViewModels"
    Background="{StaticResource BackgroundBrush}">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header Banner - AMOLED pure black with left header, centered logo -->
        <Border Grid.Row="0" Background="#000000" Padding="24" Margin="-24,-24,-24,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Header text -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="NETWORK MAPPER" Style="{StaticResource PageHeaderStyle}"
                               Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                    <TextBlock Text="Discover Devices On Your Local Network" Style="{StaticResource PageSubtitleStyle}"
                               Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                </StackPanel>

                <!-- Center: STX.1 Home Logo -->
                <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                       Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"
                       Stretch="Uniform"/>

                <!-- Right: Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- SCAN with chrome bezel -->
                    <Border CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Command="{x:Bind ViewModel.ScanNetworkCommand}"
                                Style="{StaticResource RedButtonStyle}" Background="#000000">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource ScanButtonIconConverter}}" FontSize="14"/>
                                <TextBlock Text="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToScanButtonConverter}}"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Network Info & Devices -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="16" Margin="0,0,16,16">

                    <!-- Local Network Info Section -->
                    <StackPanel Spacing="8">
                        <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                            <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                            <TextBlock Text="LOCAL NETWORK INFO" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <Border Style="{StaticResource CardStyle}">
                            <Grid ColumnSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Local IP" Style="{StaticResource CardSubtitleStyle}"/>
                                    <TextBlock Text="{x:Bind ViewModel.LocalIpAddress, Mode=OneWay}" Style="{StaticResource CardTitleStyle}" Margin="0,4,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Gateway" Style="{StaticResource CardSubtitleStyle}"/>
                                    <TextBlock Text="{x:Bind ViewModel.Gateway, Mode=OneWay}" Style="{StaticResource CardTitleStyle}" Margin="0,4,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="MAC Address" Style="{StaticResource CardSubtitleStyle}"/>
                                    <TextBlock Text="{x:Bind ViewModel.MacAddress, Mode=OneWay}" Style="{StaticResource CardTitleStyle}" Margin="0,4,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Hostname" Style="{StaticResource CardSubtitleStyle}"/>
                                    <TextBlock Text="{x:Bind ViewModel.Hostname, Mode=OneWay}" Style="{StaticResource CardTitleStyle}" Margin="0,4,0,0" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Scan Settings & Stats Section -->
                    <StackPanel Spacing="8">
                        <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                            <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                            <TextBlock Text="SCAN SETTINGS &amp; STATISTICS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Scan Settings -->
                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Scan Subnet" Style="{StaticResource CardSubtitleStyle}"/>
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Text="{x:Bind ViewModel.ScanSubnet, Mode=TwoWay}" PlaceholderText="192.168.1"/>
                                        <TextBlock Grid.Column="1" Text=".x" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Stats -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                                <Grid ColumnSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{x:Bind ViewModel.DevicesFound, Mode=OneWay}" FontSize="24" FontWeight="Bold" Foreground="#00BCD4" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Devices" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="{x:Bind ViewModel.ActiveDevices, Mode=OneWay}" FontSize="24" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Active" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <TextBlock Text="{x:Bind ViewModel.RoutersFound, Mode=OneWay}" FontSize="24" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Routers" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                        <TextBlock Text="{x:Bind ViewModel.ComputersFound, Mode=OneWay}" FontSize="24" FontWeight="Bold" Foreground="#2196F3" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Computers" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- Scan Progress -->
                    <Border Style="{StaticResource CardStyle}" Padding="12" Background="#1A1A1A"
                            Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <ProgressRing IsActive="True" Width="20" Height="20"/>
                                <TextBlock Text="{x:Bind ViewModel.ScanStatus, Mode=OneWay}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                            </StackPanel>
                            <ProgressBar Value="{x:Bind ViewModel.ScanProgress, Mode=OneWay}" Maximum="100"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentTarget, Mode=OneWay}" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Devices List Section -->
                    <StackPanel Spacing="8">
                        <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                            <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                            <TextBlock Text="DISCOVERED DEVICES" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <Border Style="{StaticResource CardStyle}" Padding="0" MinHeight="300">
                            <Grid>
                                <ListView ItemsSource="{x:Bind ViewModel.Devices, Mode=OneWay}"
                                          SelectedItem="{x:Bind ViewModel.SelectedDevice, Mode=TwoWay}"
                                          Background="Transparent" SelectionMode="Single">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="12"/>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="vm:NetworkDeviceDisplay">
                                            <Border Background="#141414" CornerRadius="6" Padding="16">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Icon -->
                                                    <Border Background="{x:Bind DeviceTypeColor, Converter={StaticResource StringToBrushConverter}}" CornerRadius="8" Width="48" Height="48" VerticalAlignment="Center" Opacity="0.2">
                                                        <FontIcon Glyph="{x:Bind DeviceIcon}" Foreground="{x:Bind DeviceTypeColor, Converter={StaticResource StringToBrushConverter}}" FontSize="20"/>
                                                    </Border>

                                                    <!-- Device Info -->
                                                    <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                                        <TextBlock Text="{x:Bind Hostname}" Style="{StaticResource CardTitleStyle}"/>
                                                        <TextBlock Text="{x:Bind IpAddress}" FontSize="12" Foreground="#00BCD4" Margin="0,2,0,0"/>
                                                        <TextBlock Text="{x:Bind MacAddress}" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                                    </StackPanel>

                                                    <!-- Response Time -->
                                                    <StackPanel Grid.Column="2" Margin="16,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                        <TextBlock Text="Latency" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="{x:Bind ResponseTimeText}" FontSize="14" FontWeight="SemiBold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                                    </StackPanel>

                                                    <!-- Status -->
                                                    <Border Grid.Column="3" Background="{x:Bind StatusColor, Converter={StaticResource StringToBrushConverter}}" CornerRadius="4" Padding="10,6" VerticalAlignment="Center">
                                                        <TextBlock Text="{x:Bind StatusText}" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <!-- Empty State -->
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Visibility="{x:Bind ViewModel.DevicesFound, Mode=OneWay, Converter={StaticResource ZeroToVisibilityConverter}}">
                                    <FontIcon Glyph="&#xE968;" FontSize="48" Foreground="#404040"/>
                                    <TextBlock Text="No devices discovered" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,12,0,0"/>
                                    <TextBlock Text="Click 'SCAN' to discover devices" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Action Status -->
                    <Border Background="{x:Bind ViewModel.ActionStatusColor, Mode=OneWay, Converter={StaticResource StringToBrushConverter}}" CornerRadius="8" Padding="16"
                            Visibility="{x:Bind ViewModel.HasActionStatus, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" Opacity="0.9">
                        <TextBlock Text="{x:Bind ViewModel.ActionStatus, Mode=OneWay}" Foreground="White" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Panel - Device Details -->
            <Border Grid.Column="1" Background="#0A0A0A" CornerRadius="8,0,0,8">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Padding="20" Spacing="16">
                        <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                            <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                            <TextBlock Text="DEVICE DETAILS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <!-- No Selection -->
                        <StackPanel Visibility="{x:Bind ViewModel.HasSelectedDevice, Mode=OneWay, Converter={StaticResource InvertBoolToVisibilityConverter}}"
                                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0">
                            <FontIcon Glyph="&#xE946;" FontSize="48" Foreground="#404040"/>
                            <TextBlock Text="Select a device to view details" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,12,0,0" TextAlignment="Center"/>
                        </StackPanel>

                        <!-- Device Selected -->
                        <StackPanel Visibility="{x:Bind ViewModel.HasSelectedDevice, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" Spacing="16">
                            <!-- Basic Info -->
                            <Border Background="#141414" CornerRadius="8" Padding="16">
                                <StackPanel Spacing="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{x:Bind ViewModel.SelectedDevice.Hostname, Mode=OneWay}" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                            <TextBlock Text="{x:Bind ViewModel.SelectedDevice.DeviceType, Mode=OneWay}" Style="{StaticResource CardSubtitleStyle}"/>
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="{x:Bind ViewModel.SelectedDevice.StatusColor, Mode=OneWay, Converter={StaticResource StringToBrushConverter}}" CornerRadius="4" Padding="8,4">
                                            <TextBlock Text="{x:Bind ViewModel.SelectedDevice.StatusText, Mode=OneWay}" FontSize="11" Foreground="White"/>
                                        </Border>
                                    </Grid>

                                    <StackPanel Spacing="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="IP Address" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}"/>
                                            <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedDevice.IpAddress, Mode=OneWay}" FontSize="12" Foreground="#00BCD4"/>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="MAC Address" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}"/>
                                            <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedDevice.MacAddress, Mode=OneWay}" FontSize="12" Foreground="White"/>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Manufacturer" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}"/>
                                            <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedDevice.Manufacturer, Mode=OneWay}" FontSize="12" Foreground="White"/>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Latency" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}"/>
                                            <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedDevice.ResponseTimeText, Mode=OneWay}" FontSize="12" Foreground="#4CAF50"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Actions -->
                            <StackPanel Spacing="8">
                                <Button Command="{x:Bind ViewModel.ScanPortsCommand}" HorizontalAlignment="Stretch"
                                        Style="{StaticResource RedButtonStyle}"
                                        IsEnabled="{x:Bind ViewModel.IsPortScanning, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE71B;" FontSize="14"/>
                                        <TextBlock Text="SCAN PORTS"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{x:Bind ViewModel.RefreshDeviceCommand}" HorizontalAlignment="Stretch"
                                        Style="{StaticResource OutlinedButtonStyle}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                        <TextBlock Text="REFRESH INFO"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Port Scan Progress -->
                            <Border Background="#141414" CornerRadius="8" Padding="16"
                                    Visibility="{x:Bind ViewModel.IsPortScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <ProgressRing IsActive="True" Width="16" Height="16"/>
                                    <TextBlock Text="{x:Bind ViewModel.PortScanStatus, Mode=OneWay}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- Open Ports -->
                            <Border Background="#141414" CornerRadius="8" Padding="16">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="OPEN PORTS" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <ListView ItemsSource="{x:Bind ViewModel.OpenPorts, Mode=OneWay}" SelectionMode="None" MaxHeight="200">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="vm:PortDisplay">
                                                <Grid Margin="0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{x:Bind Port}" FontSize="13" FontWeight="SemiBold" Foreground="#00BCD4"/>
                                                    <TextBlock Grid.Column="1" Text="{x:Bind Service}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <Border Grid.Column="2" Background="{x:Bind StatusColor, Converter={StaticResource StringToBrushConverter}}" CornerRadius="3" Padding="6,2">
                                                        <TextBlock Text="{x:Bind Status}" FontSize="10" Foreground="White"/>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                    <TextBlock Text="No open ports found" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}"
                                               Visibility="{x:Bind ViewModel.OpenPorts.Count, Mode=OneWay, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
