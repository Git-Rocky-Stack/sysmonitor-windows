<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.NetworkMapperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SysMonitor.App.Views"
    xmlns:vm="using:SysMonitor.App.ViewModels"
    Background="Transparent">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="24" Spacing="16">
                <!-- Header -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Network Mapper" FontSize="28" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="Discover devices on your local network" FontSize="14" Foreground="#808080" Margin="0,4,0,0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <Button Command="{x:Bind ViewModel.ScanNetworkCommand}" Style="{StaticResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource ScanButtonIconConverter}}" FontSize="14"/>
                                <TextBlock Text="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToScanButtonConverter}}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Local Network Info -->
                <Border Background="#0A0A0A" CornerRadius="8" Padding="20" BorderBrush="#1A1A1A" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Local IP" FontSize="11" Foreground="#606060"/>
                            <TextBlock Text="{x:Bind ViewModel.LocalIpAddress, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Gateway" FontSize="11" Foreground="#606060"/>
                            <TextBlock Text="{x:Bind ViewModel.Gateway, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="MAC Address" FontSize="11" Foreground="#606060"/>
                            <TextBlock Text="{x:Bind ViewModel.MacAddress, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Hostname" FontSize="11" Foreground="#606060"/>
                            <TextBlock Text="{x:Bind ViewModel.Hostname, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,4,0,0" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Scan Settings & Stats Row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Scan Settings -->
                    <Border Background="#0A0A0A" CornerRadius="8" Padding="20" Margin="0,0,8,0" BorderBrush="#1A1A1A" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Scan Subnet" FontSize="12" Foreground="#808080"/>
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{x:Bind ViewModel.ScanSubnet, Mode=TwoWay}" PlaceholderText="192.168.1"/>
                                <TextBlock Grid.Column="1" Text=".x" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#808080"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Stats -->
                    <Border Grid.Column="1" Background="#0A0A0A" CornerRadius="8" Padding="20" Margin="8,0,0,0" BorderBrush="#1A1A1A" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{x:Bind ViewModel.DevicesFound, Mode=OneWay}" FontSize="24" FontWeight="Bold" Foreground="#00BCD4" HorizontalAlignment="Center"/>
                                <TextBlock Text="Devices" FontSize="11" Foreground="#606060" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="{x:Bind ViewModel.ActiveDevices, Mode=OneWay}" FontSize="24" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                <TextBlock Text="Active" FontSize="11" Foreground="#606060" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="{x:Bind ViewModel.RoutersFound, Mode=OneWay}" FontSize="24" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                                <TextBlock Text="Routers" FontSize="11" Foreground="#606060" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="{x:Bind ViewModel.ComputersFound, Mode=OneWay}" FontSize="24" FontWeight="Bold" Foreground="#2196F3" HorizontalAlignment="Center"/>
                                <TextBlock Text="Computers" FontSize="11" Foreground="#606060" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Scan Progress -->
                <Border Background="#0A0A0A" CornerRadius="8" Padding="16" BorderBrush="#1A1A1A" BorderThickness="1"
                        Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay}">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <ProgressRing IsActive="True" Width="20" Height="20"/>
                            <TextBlock Text="{x:Bind ViewModel.ScanStatus, Mode=OneWay}" Foreground="#808080" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ProgressBar Value="{x:Bind ViewModel.ScanProgress, Mode=OneWay}" Maximum="100"/>
                        <TextBlock Text="{x:Bind ViewModel.CurrentTarget, Mode=OneWay}" FontSize="11" Foreground="#606060"/>
                    </StackPanel>
                </Border>

                <!-- Devices List -->
                <Border Background="#0A0A0A" CornerRadius="8" Padding="20" BorderBrush="#1A1A1A" BorderThickness="1" MinHeight="350">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Discovered Devices" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16"/>

                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Devices, Mode=OneWay}"
                                  SelectedItem="{x:Bind ViewModel.SelectedDevice, Mode=TwoWay}"
                                  Background="Transparent" SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="vm:NetworkDeviceDisplay">
                                    <Border Background="#141414" CornerRadius="6" Padding="16" Margin="0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon -->
                                            <Border Background="{x:Bind DeviceTypeColor}" CornerRadius="8" Width="48" Height="48" VerticalAlignment="Center" Opacity="0.2">
                                                <FontIcon Glyph="{x:Bind DeviceIcon}" Foreground="{x:Bind DeviceTypeColor}" FontSize="20"/>
                                            </Border>

                                            <!-- Device Info -->
                                            <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                                <TextBlock Text="{x:Bind Hostname}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                                <TextBlock Text="{x:Bind IpAddress}" FontSize="12" Foreground="#00BCD4" Margin="0,2,0,0"/>
                                                <TextBlock Text="{x:Bind MacAddress}" FontSize="11" Foreground="#606060" Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- Response Time -->
                                            <StackPanel Grid.Column="2" Margin="16,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Text="Latency" FontSize="11" Foreground="#606060" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{x:Bind ResponseTimeText}" FontSize="14" FontWeight="SemiBold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Status -->
                                            <Border Grid.Column="3" Background="{x:Bind StatusColor}" CornerRadius="4" Padding="10,6" VerticalAlignment="Center">
                                                <TextBlock Text="{x:Bind StatusText}" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Empty State -->
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Visibility="{x:Bind ViewModel.DevicesFound, Mode=OneWay, Converter={StaticResource ZeroToVisibilityConverter}}">
                            <FontIcon Glyph="&#xE968;" FontSize="48" Foreground="#404040"/>
                            <TextBlock Text="No devices discovered" FontSize="14" Foreground="#606060" Margin="0,12,0,0"/>
                            <TextBlock Text="Click 'Scan Network' to discover devices" FontSize="12" Foreground="#404040" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Action Status -->
                <Border Background="{x:Bind ViewModel.ActionStatusColor, Mode=OneWay}" CornerRadius="8" Padding="16"
                        Visibility="{x:Bind ViewModel.HasActionStatus, Mode=OneWay}" Opacity="0.9">
                    <TextBlock Text="{x:Bind ViewModel.ActionStatus, Mode=OneWay}" Foreground="White" FontWeight="SemiBold"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Device Details Panel -->
        <Border Grid.Column="1" Background="#0A0A0A" BorderBrush="#1A1A1A" BorderThickness="1,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Padding="20" Spacing="16">
                    <TextBlock Text="Device Details" FontSize="18" FontWeight="SemiBold" Foreground="White"/>

                    <!-- No Selection -->
                    <StackPanel Visibility="{x:Bind ViewModel.HasSelectedDevice, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
                                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0">
                        <FontIcon Glyph="&#xE946;" FontSize="48" Foreground="#404040"/>
                        <TextBlock Text="Select a device to view details" FontSize="13" Foreground="#606060" Margin="0,12,0,0" TextAlignment="Center"/>
                    </StackPanel>

                    <!-- Device Selected -->
                    <StackPanel Visibility="{x:Bind ViewModel.HasSelectedDevice, Mode=OneWay}" Spacing="16">
                        <!-- Basic Info -->
                        <Border Background="#141414" CornerRadius="8" Padding="16">
                            <StackPanel Spacing="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="{x:Bind ViewModel.SelectedDevice.Hostname, Mode=OneWay}" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                        <TextBlock Text="{x:Bind ViewModel.SelectedDevice.DeviceType, Mode=OneWay}" FontSize="12" Foreground="#808080"/>
                                    </StackPanel>
                                    <Border Grid.Column="1" Background="{x:Bind ViewModel.SelectedDevice.StatusColor, Mode=OneWay}" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="{x:Bind ViewModel.SelectedDevice.StatusText, Mode=OneWay}" FontSize="11" Foreground="White"/>
                                    </Border>
                                </Grid>

                                <StackPanel Spacing="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="IP Address" FontSize="12" Foreground="#606060"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedDevice.IpAddress, Mode=OneWay}" FontSize="12" Foreground="#00BCD4"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="MAC Address" FontSize="12" Foreground="#606060"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedDevice.MacAddress, Mode=OneWay}" FontSize="12" Foreground="White"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Manufacturer" FontSize="12" Foreground="#606060"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedDevice.Manufacturer, Mode=OneWay}" FontSize="12" Foreground="White"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Latency" FontSize="12" Foreground="#606060"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedDevice.ResponseTimeText, Mode=OneWay}" FontSize="12" Foreground="#4CAF50"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Actions -->
                        <StackPanel Spacing="8">
                            <Button Command="{x:Bind ViewModel.ScanPortsCommand}" HorizontalAlignment="Stretch"
                                    IsEnabled="{x:Bind ViewModel.IsPortScanning, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE71B;" FontSize="14"/>
                                    <TextBlock Text="Scan Ports"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{x:Bind ViewModel.RefreshDeviceCommand}" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                    <TextBlock Text="Refresh Info"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Port Scan Results -->
                        <Border Background="#141414" CornerRadius="8" Padding="16" Visibility="{x:Bind ViewModel.IsPortScanning, Mode=OneWay}">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <ProgressRing IsActive="True" Width="16" Height="16"/>
                                <TextBlock Text="{x:Bind ViewModel.PortScanStatus, Mode=OneWay}" FontSize="12" Foreground="#808080"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#141414" CornerRadius="8" Padding="16">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Open Ports" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                <ListView ItemsSource="{x:Bind ViewModel.OpenPorts, Mode=OneWay}" SelectionMode="None" MaxHeight="200">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="vm:PortDisplay">
                                            <Grid Margin="0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{x:Bind Port}" FontSize="13" FontWeight="SemiBold" Foreground="#00BCD4"/>
                                                <TextBlock Grid.Column="1" Text="{x:Bind Service}" FontSize="12" Foreground="#808080"/>
                                                <Border Grid.Column="2" Background="{x:Bind StatusColor}" CornerRadius="3" Padding="6,2">
                                                    <TextBlock Text="{x:Bind Status}" FontSize="10" Foreground="White"/>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <TextBlock Text="No open ports found" FontSize="12" Foreground="#606060"
                                           Visibility="{x:Bind ViewModel.OpenPorts.Count, Mode=OneWay, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
