<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.DriverUpdaterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SysMonitor.App.Views"
    xmlns:vm="using:SysMonitor.App.ViewModels"
    Background="{StaticResource BackgroundBrush}">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header Banner - AMOLED pure black with left header, centered logo -->
        <Border Grid.Row="0" Background="#000000" Padding="24" Margin="-24,-24,-24,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Header text -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="DRIVER UPDATER" Style="{StaticResource PageHeaderStyle}"
                               Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                    <TextBlock Text="Scan &amp; Manage System Drivers" Style="{StaticResource PageSubtitleStyle}"
                               Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                </StackPanel>

                <!-- Center: STX.1 Home Logo -->
                <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                       Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"
                       Stretch="Uniform"/>

                <!-- Right: Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- SCAN with chrome bezel -->
                    <Border CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Command="{x:Bind ViewModel.ScanDriversCommand}"
                                Style="{StaticResource RedButtonStyle}" Background="#000000">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                <TextBlock Text="SCAN"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Button Command="{x:Bind ViewModel.StopScanCommand}"
                            Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                            Style="{StaticResource OutlinedButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE71A;" FontSize="14"/>
                            <TextBlock Text="STOP"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16" Margin="0,0,0,16">

                <!-- Stats Section -->
                <StackPanel Spacing="8">
                    <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                        <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                        <TextBlock Text="DRIVER STATISTICS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                    </StackPanel>

                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Total" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.TotalDrivers, Mode=OneWay}" FontSize="28" FontWeight="Bold" Foreground="#00BCD4" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Up to Date" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.UpToDateDrivers, Mode=OneWay}" FontSize="28" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Outdated" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.OutdatedDrivers, Mode=OneWay}" FontSize="28" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Problems" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.ProblemDriversCount, Mode=OneWay}" FontSize="28" FontWeight="Bold" Foreground="#F44336" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Unsigned" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.UnsignedDrivers, Mode=OneWay}" FontSize="28" FontWeight="Bold" Foreground="#9C27B0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- Quick Actions -->
                <StackPanel Spacing="8">
                    <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                        <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                        <TextBlock Text="QUICK ACTIONS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                    </StackPanel>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Style="{StaticResource CardStyle}" Padding="16">
                            <Button Command="{x:Bind ViewModel.OpenWindowsUpdateCommand}"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                    Background="Transparent" BorderThickness="0" Padding="0">
                                <StackPanel Spacing="8" HorizontalAlignment="Center">
                                    <Border Style="{StaticResource IconContainerRedStyle}" Width="48" Height="48">
                                        <FontIcon Glyph="&#xE895;" FontSize="24" Foreground="White"/>
                                    </Border>
                                    <TextBlock Text="Windows Update" Style="{StaticResource CardTitleStyle}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Check for driver updates" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Padding="16">
                            <Button Command="{x:Bind ViewModel.OpenDeviceManagerCommand}"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                    Background="Transparent" BorderThickness="0" Padding="0">
                                <StackPanel Spacing="8" HorizontalAlignment="Center">
                                    <Border Style="{StaticResource IconContainerRedStyle}" Width="48" Height="48">
                                        <FontIcon Glyph="&#xE964;" FontSize="24" Foreground="White"/>
                                    </Border>
                                    <TextBlock Text="Device Manager" Style="{StaticResource CardTitleStyle}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Manage device drivers" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource CardStyle}" Padding="16">
                            <Button Command="{x:Bind ViewModel.ExportReportCommand}"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                    Background="Transparent" BorderThickness="0" Padding="0">
                                <StackPanel Spacing="8" HorizontalAlignment="Center">
                                    <Border Style="{StaticResource IconContainerRedStyle}" Width="48" Height="48">
                                        <FontIcon Glyph="&#xE8A5;" FontSize="24" Foreground="White"/>
                                    </Border>
                                    <TextBlock Text="Export Report" Style="{StaticResource CardTitleStyle}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Save driver inventory" Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- Scan Status -->
                <Border Style="{StaticResource CardStyle}" Padding="12" Background="#1A1A1A"
                        Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <ProgressRing IsActive="True" Width="20" Height="20"/>
                        <TextBlock Text="{x:Bind ViewModel.ScanStatus, Mode=OneWay}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Problem Drivers Section (shown if problems exist) -->
                <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.ProblemDriversCount, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}">
                    <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                        <Border Style="{StaticResource AccentBarStyle}" Height="20" Background="#F44336"/>
                        <TextBlock Text="ATTENTION REQUIRED" Style="{StaticResource SectionHeaderStyle}" Foreground="#F44336" Margin="0"/>
                    </StackPanel>

                    <Border Style="{StaticResource CardStyle}" Padding="0" Background="#1A1010">
                        <ListView ItemsSource="{x:Bind ViewModel.ProblemDrivers, Mode=OneWay}"
                                  Background="Transparent" SelectionMode="None" MaxHeight="250">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="8"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="vm:DriverDisplayItem">
                                    <Border Background="#141414" CornerRadius="6" Padding="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Style="{StaticResource IconContainerStyle}" Width="40" Height="40" VerticalAlignment="Center">
                                                <FontIcon Glyph="{x:Bind DeviceClassIcon}" FontSize="18" Foreground="#F44336"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" Margin="12,0" VerticalAlignment="Center">
                                                <TextBlock Text="{x:Bind DeviceName}" Style="{StaticResource CardTitleStyle}" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{x:Bind ProblemDescription}" FontSize="12" Foreground="#FF9800" Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <Border Grid.Column="2" Background="{x:Bind StatusColor, Converter={StaticResource StringToBrushConverter}}"
                                                    CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                                <TextBlock Text="{x:Bind Status}" FontSize="11" Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </StackPanel>

                <!-- All Drivers Section -->
                <StackPanel Spacing="8">
                    <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                        <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                        <TextBlock Text="ALL DRIVERS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        <TextBlock Text="{x:Bind ViewModel.LastScanTime, Mode=OneWay}" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}"
                                   VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>

                    <Border Style="{StaticResource CardStyle}" Padding="0" MinHeight="400">
                        <Grid>
                            <ListView ItemsSource="{x:Bind ViewModel.Drivers, Mode=OneWay}"
                                      Background="Transparent" SelectionMode="None">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="8"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="vm:DriverDisplayItem">
                                        <Border Background="#141414" CornerRadius="6" Padding="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Icon -->
                                                <Border Style="{StaticResource IconContainerStyle}" Width="44" Height="44" VerticalAlignment="Center">
                                                    <FontIcon Glyph="{x:Bind DeviceClassIcon}" FontSize="20"
                                                              Foreground="{x:Bind StatusColor, Converter={StaticResource StringToBrushConverter}}"/>
                                                </Border>

                                                <!-- Device Info -->
                                                <StackPanel Grid.Column="1" Margin="12,0" VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <TextBlock Text="{x:Bind DeviceName}" Style="{StaticResource CardTitleStyle}" TextTrimming="CharacterEllipsis" MaxWidth="300"/>
                                                        <!-- Badges -->
                                                        <Border Background="#F44336" CornerRadius="3" Padding="6,2"
                                                                Visibility="{x:Bind ProblemBadgeVisibility}">
                                                            <TextBlock Text="PROBLEM" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                                        </Border>
                                                        <Border Background="#FF9800" CornerRadius="3" Padding="6,2"
                                                                Visibility="{x:Bind OutdatedBadgeVisibility}">
                                                            <TextBlock Text="OUTDATED" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <TextBlock Style="{StaticResource CardSubtitleStyle}" Margin="0,2,0,0">
                                                        <Run Text="{x:Bind Manufacturer}"/> â€¢ <Run Text="{x:Bind DeviceClass}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Version -->
                                                <StackPanel Grid.Column="2" Margin="12,0" VerticalAlignment="Center" MinWidth="100">
                                                    <TextBlock Text="Version" FontSize="10" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    <TextBlock Text="{x:Bind DriverVersion}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                                                               TextTrimming="CharacterEllipsis" MaxWidth="100"/>
                                                </StackPanel>

                                                <!-- Date -->
                                                <StackPanel Grid.Column="3" Margin="12,0" VerticalAlignment="Center" MinWidth="90">
                                                    <TextBlock Text="Driver Date" FontSize="10" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    <TextBlock Text="{x:Bind DriverDateText}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </StackPanel>

                                                <!-- Signed Status -->
                                                <Border Grid.Column="4" Background="{x:Bind SignedColor, Converter={StaticResource StringToBrushConverter}}"
                                                        CornerRadius="4" Padding="10,6" VerticalAlignment="Center" MinWidth="70">
                                                    <TextBlock Text="{x:Bind SignedText}" FontSize="11" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- Empty State -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Visibility="{x:Bind ViewModel.HasScanned, Mode=OneWay, Converter={StaticResource InvertBoolToVisibilityConverter}}">
                                <FontIcon Glyph="&#xE964;" FontSize="48" Foreground="#404040"/>
                                <TextBlock Text="No drivers scanned yet" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,12,0,0" HorizontalAlignment="Center"/>
                                <TextBlock Text="Click 'SCAN' to analyze your system drivers" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
