<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.HealthCheckPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Header Banner -->
        <Border Grid.Row="0" Background="#000000" Padding="24" Margin="-24,-24,-24,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="HEALTH CHECK" Style="{StaticResource PageHeaderStyle}"
                               Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                    <TextBlock Text="One-Click System Analysis &amp; Optimization" Style="{StaticResource PageSubtitleStyle}"
                               Foreground="#AAFFFFFF" HorizontalAlignment="Left"/>
                </StackPanel>

                <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                       Height="80" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform"/>
            </Grid>
        </Border>

        <!-- Health Score Card -->
        <StackPanel Grid.Row="1" Spacing="12">
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="SYSTEM HEALTH" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Premium Health Score Gauge -->
                    <Grid Grid.Column="0" Width="120" Height="120" Margin="0,0,24,0">
                        <!-- Outer glow ring -->
                        <Ellipse StrokeThickness="8" Opacity="0.15">
                            <Ellipse.Stroke>
                                <RadialGradientBrush>
                                    <GradientStop Color="#AA2024" Offset="0.7"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>
                        <!-- Track ring (background) -->
                        <Ellipse StrokeThickness="6" Margin="8">
                            <Ellipse.Stroke>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#2A2A2A" Offset="0"/>
                                    <GradientStop Color="#1A1A1A" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>
                        <!-- Progress ring (foreground) -->
                        <Ellipse StrokeThickness="6" StrokeDashCap="Round" Margin="8"
                                 StrokeDashArray="4 1">
                            <Ellipse.Stroke>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#AA2024" Offset="0"/>
                                    <GradientStop Color="#D4383C" Offset="0.5"/>
                                    <GradientStop Color="#AA2024" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>
                        <!-- Inner content -->
                        <Border CornerRadius="50" Margin="20">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1A1A1A" Offset="0"/>
                                    <GradientStop Color="#0D0D0D" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="{x:Bind ViewModel.HealthGrade, Mode=OneWay}"
                                           FontSize="32" FontWeight="Bold" HorizontalAlignment="Center">
                                    <TextBlock.Foreground>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#D4383C" Offset="0"/>
                                            <GradientStop Color="#AA2024" Offset="1"/>
                                        </LinearGradientBrush>
                                    </TextBlock.Foreground>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center">
                                    <Run Text="{x:Bind ViewModel.HealthScore, Mode=OneWay}"/>
                                    <Run Text="/100"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Status Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                        <TextBlock Text="{x:Bind ViewModel.HealthDescription, Mode=OneWay}"
                                   Style="{StaticResource CardTitleStyle}" TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE783;" FontSize="14" Foreground="{StaticResource ErrorBrush}"/>
                                <TextBlock Foreground="{StaticResource ErrorBrush}">
                                    <Run Text="{x:Bind ViewModel.CriticalCount, Mode=OneWay}"/>
                                    <Run Text=" Critical"/>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE7BA;" FontSize="14" Foreground="{StaticResource WarningBrush}"/>
                                <TextBlock Foreground="{StaticResource WarningBrush}">
                                    <Run Text="{x:Bind ViewModel.WarningCount, Mode=OneWay}"/>
                                    <Run Text=" Warnings"/>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE946;" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Foreground="{StaticResource TextSecondaryBrush}">
                                    <Run Text="{x:Bind ViewModel.InfoCount, Mode=OneWay}"/>
                                    <Run Text=" Info"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Style="{StaticResource CardSubtitleStyle}">
                            <Run Text="Potential savings: "/>
                            <Run Text="{x:Bind ViewModel.FormattedSpaceSavings, Mode=OneWay}" Foreground="{StaticResource SuccessBrush}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" Spacing="8">
                        <Border CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="RUN HEALTH CHECK" Command="{x:Bind ViewModel.RunHealthCheckCommand}"
                                    Style="{StaticResource RedButtonStyle}"
                                    IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"/>
                        </Border>
                        <Border CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="QUICK FIX ALL" Command="{x:Bind ViewModel.QuickFixCommand}"
                                    Style="{StaticResource OutlinedButtonStyle}" Background="#000000"
                                    IsEnabled="{x:Bind ViewModel.HasResults, Mode=OneWay}"/>
                        </Border>
                        <Border CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="Create Restore Point" Command="{x:Bind ViewModel.CreateRestorePointCommand}"
                                    Style="{StaticResource OutlinedButtonStyle}" Background="#000000"
                                    IsEnabled="{x:Bind ViewModel.CanCreateRestorePoint, Mode=OneWay}"
                                    HorizontalAlignment="Stretch"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Issues List -->
        <Grid Grid.Row="2" RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                    <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                    <TextBlock Text="DETECTED ISSUES" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                    <Border CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Content="Select Fixable" Command="{x:Bind ViewModel.SelectAllFixableCommand}"
                                Style="{StaticResource OutlinedButtonStyle}" Background="#000000"/>
                    </Border>
                    <Border CornerRadius="26" Padding="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#707070" Offset="0.0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                <GradientStop Color="#505050" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Content="Deselect All" Command="{x:Bind ViewModel.DeselectAllCommand}"
                                Style="{StaticResource OutlinedButtonStyle}" Background="#000000"/>
                    </Border>
                </StackPanel>
            </Grid>

            <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Issues, Mode=OneWay}" Background="Transparent">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0,4,0,4"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          IsEnabled="{Binding CanAutoFix}" VerticalAlignment="Center"/>

                                <Border Grid.Column="1" Style="{StaticResource IconContainerStyle}"
                                        Width="40" Height="40" Margin="8,0,12,0">
                                    <FontIcon Glyph="{Binding SeverityIcon}" FontSize="18"
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title}" Style="{StaticResource CardTitleStyle}"/>
                                    <TextBlock Text="{Binding Description}" Style="{StaticResource CardSubtitleStyle}"
                                               TextWrapping="Wrap" MaxWidth="400"/>
                                    <TextBlock Text="{Binding FixAction}" Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11" FontStyle="Italic" Margin="0,4,0,0"
                                               Visibility="{Binding CanAutoFix, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <Border CornerRadius="4" Padding="8,4" Background="{StaticResource CardBrush}">
                                        <TextBlock Text="{Binding Category}" FontSize="11"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </Border>
                                    <TextBlock Text="{Binding Severity}" FontSize="12" FontWeight="SemiBold"
                                               HorizontalAlignment="Center" Margin="0,4,0,0"
                                               Foreground="{StaticResource WarningBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="3">
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                       Style="{StaticResource CardSubtitleStyle}" VerticalAlignment="Center"/>
            <TextBlock HorizontalAlignment="Right" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                <Run Text="Last scan: "/>
                <Run Text="{x:Bind ViewModel.LastScanTime, Mode=OneWay}"/>
            </TextBlock>
            <ProgressBar IsIndeterminate="True" Foreground="{StaticResource PrimaryBrush}"
                         Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                         VerticalAlignment="Bottom" Margin="0,8,0,0"/>
        </Grid>
    </Grid>
</Page>
