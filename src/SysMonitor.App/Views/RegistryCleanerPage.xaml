<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.RegistryCleanerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Header Banner - AMOLED pure black with left header, centered logo -->
        <Border Grid.Row="0" Background="#000000" Padding="24" Margin="-24,-24,-24,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Header text -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="REGISTRY CLEANER" Style="{StaticResource PageHeaderStyle}"
                               Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                    <TextBlock Text="Find &amp; Fix Invalid Registry Entries" Style="{StaticResource PageSubtitleStyle}"
                               Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                </StackPanel>

                <!-- Center: STX.1 Home Logo -->
                <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                       Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"
                       Stretch="Uniform"/>
            </Grid>
        </Border>

        <!-- Cleaning Controls Section -->
        <StackPanel Grid.Row="1" Spacing="12">
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="REGISTRY CONTROLS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Status Card -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource IconContainerRedStyle}" Margin="0,0,16,0">
                        <FontIcon Glyph="&#xEA99;" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                                   Style="{StaticResource CardTitleStyle}"/>
                        <TextBlock Style="{StaticResource CardSubtitleStyle}" Margin="0,4,0,0">
                            <Run Text="Issues: "/>
                            <Run Text="{x:Bind ViewModel.TotalIssues, Mode=OneWay}" Foreground="{StaticResource WarningBrush}"/>
                            <Run Text=" | Selected: "/>
                            <Run Text="{x:Bind ViewModel.SelectedIssues, Mode=OneWay}" Foreground="{StaticResource CyanAccentBrush}"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                        <!-- SCAN with chrome bezel -->
                        <Border CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="SCAN" Command="{x:Bind ViewModel.ScanCommand}"
                                    Style="{StaticResource OutlinedButtonStyle}" Background="#000000"
                                    IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"/>
                        </Border>
                        <!-- FIX SELECTED with chrome bezel -->
                        <Border CornerRadius="26" Padding="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#707070" Offset="0.0"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.3"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#C0C0C0" Offset="0.7"/>
                                    <GradientStop Color="#505050" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button Content="FIX SELECTED" Command="{x:Bind ViewModel.CleanCommand}"
                                    Style="{StaticResource RedButtonStyle}"
                                    IsEnabled="{x:Bind ViewModel.HasResults, Mode=OneWay}"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Info Card -->
            <Border Style="{StaticResource CardStyle}" Padding="12" Background="#1A1A1A">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon Grid.Column="0" Glyph="&#xE946;" FontSize="16"
                              Foreground="{StaticResource CyanAccentBrush}" Margin="0,0,12,0"/>
                    <TextBlock Grid.Column="1" TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                        <Run Text="Registry cleaning removes invalid entries left behind by uninstalled programs. "/>
                        <Run Text="A backup is automatically created before any changes are made." Foreground="{StaticResource SuccessBrush}"/>
                    </TextBlock>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Scan Results Section -->
        <Grid Grid.Row="2" RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="SCAN RESULTS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Results List -->
            <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.ScanResults, Mode=OneWay}"
                      Background="Transparent">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,4,0,4"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardStyle}" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      VerticalAlignment="Center"/>

                            <Border Grid.Column="1" Style="{StaticResource IconContainerStyle}"
                                    Width="40" Height="40" Margin="8,0,12,0">
                                <FontIcon Glyph="&#xEA99;" FontSize="16" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding IssueType}" Style="{StaticResource CardTitleStyle}"/>
                                <TextBlock Text="{Binding Description}" Style="{StaticResource CardSubtitleStyle}"
                                           TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                                <TextBlock Text="{Binding Key}" Style="{StaticResource CardSubtitleStyle}"
                                           Foreground="{StaticResource TextTertiaryBrush}" FontSize="10"
                                           TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                            </StackPanel>

                            <!-- Risk Level Badge -->
                            <Border Grid.Column="3" VerticalAlignment="Center" CornerRadius="8" Padding="8,4"
                                    Background="#2A2A2A" Margin="8,0,0,0">
                                <TextBlock FontSize="11" FontWeight="SemiBold">
                                    <Run Text="{Binding RiskLevel}"/>
                                </TextBlock>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <ProgressBar Grid.Row="3" IsIndeterminate="True"
                     Foreground="{StaticResource PrimaryBrush}"
                     Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</Page>
