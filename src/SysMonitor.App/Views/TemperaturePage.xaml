<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.TemperaturePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="using:SysMonitor.App.ViewModels"
    Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="0,0,0,24" Spacing="16">

            <!-- Page Header Banner - AMOLED pure black with left header, centered logo -->
            <Border Background="#000000" Padding="24" Margin="-24,-24,-24,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Header text -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="TEMP MONITOR" Style="{StaticResource PageHeaderStyle}"
                                   Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                        <TextBlock Text="Real-time thermal monitoring" Style="{StaticResource PageSubtitleStyle}"
                                   Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                    </StackPanel>

                    <!-- Center: STX.1 Home Logo -->
                    <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                           Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Stretch="Uniform"/>
                </Grid>
            </Border>

            <!-- Loading State -->
            <Border Style="{StaticResource CardStyle}" Padding="32"
                    Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" Spacing="16">
                    <ProgressRing IsActive="True" Width="48" Height="48"/>
                    <TextBlock Text="Initializing temperature sensors..." Style="{StaticResource CardSubtitleStyle}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- No Sensors Found -->
            <Border Style="{StaticResource CardStyle}" Padding="32"
                    Visibility="{x:Bind ViewModel.NoSensorsFound, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" Spacing="16">
                    <FontIcon Glyph="&#xE783;" FontSize="48" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="No Temperature Sensors Found" Style="{StaticResource PageSubtitleStyle}"
                               HorizontalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Temperature monitoring requires administrator privileges and compatible hardware sensors."
                               Style="{StaticResource CardSubtitleStyle}" HorizontalAlignment="Center"
                               TextAlignment="Center" MaxWidth="400" TextWrapping="Wrap"/>
                    <TextBlock Text="Try running the application as Administrator."
                               HorizontalAlignment="Center" Foreground="{StaticResource CyanAccentBrush}"
                               FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Primary Temperatures Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}"
                        Visibility="{x:Bind ViewModel.HasTemperatures, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="PRIMARY TEMPERATURES" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- CPU and GPU Temperature Cards -->
            <Grid ColumnSpacing="12"
                  Visibility="{x:Bind ViewModel.HasTemperatures, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CPU Temperature Card -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <Grid RowSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource IconContainerStyle}" Background="{StaticResource PrimaryBrush}"
                                    Width="48" Height="48">
                                <FontIcon Glyph="&#xE950;" FontSize="24" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="CPU TEMPERATURE" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="Processor" Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Temperature Value -->
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                            <TextBlock FontSize="56" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource TextPrimaryBrush}">
                                <Run Text="{x:Bind ViewModel.CpuTemperature, Mode=OneWay, Converter={StaticResource CelsiusToFahrenheitConverter}}"/>
                                <Run Text="°F" FontSize="28" FontWeight="Normal"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Status Badge -->
                        <Border Grid.Row="2" CornerRadius="8" Padding="16,8"
                                Background="{StaticResource SurfaceLightBrush}"
                                HorizontalAlignment="Center">
                            <TextBlock Text="{x:Bind ViewModel.CpuTempStatus, Mode=OneWay}"
                                       FontWeight="SemiBold" FontSize="14"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- GPU Temperature Card -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <Grid RowSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <Border Style="{StaticResource IconContainerStyle}" Background="{StaticResource CyanAccentBrush}"
                                    Width="48" Height="48">
                                <FontIcon Glyph="&#xE7F4;" FontSize="24" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="GPU TEMPERATURE" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="Graphics" Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Temperature Value -->
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                            <TextBlock FontSize="56" FontWeight="Bold" HorizontalAlignment="Center"
                                       Foreground="{StaticResource TextPrimaryBrush}">
                                <Run Text="{x:Bind ViewModel.GpuTemperature, Mode=OneWay, Converter={StaticResource CelsiusToFahrenheitConverter}}"/>
                                <Run Text="°F" FontSize="28" FontWeight="Normal"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Status Badge -->
                        <Border Grid.Row="2" CornerRadius="8" Padding="16,8"
                                Background="{StaticResource SurfaceLightBrush}"
                                HorizontalAlignment="Center">
                            <TextBlock Text="{x:Bind ViewModel.GpuTempStatus, Mode=OneWay}"
                                       FontWeight="SemiBold" FontSize="14"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Temperature Legend -->
            <Border Style="{StaticResource CardStyle}" Padding="16"
                    Visibility="{x:Bind ViewModel.HasTemperatures, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#2196F3"/>
                        <TextBlock Text="Cool &lt;113°F" Style="{StaticResource CardSubtitleStyle}" FontSize="11"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#4CAF50"/>
                        <TextBlock Text="Normal &lt;149°F" Style="{StaticResource CardSubtitleStyle}" FontSize="11"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#FF9800"/>
                        <TextBlock Text="Warm &lt;176°F" Style="{StaticResource CardSubtitleStyle}" FontSize="11"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#FF5722"/>
                        <TextBlock Text="Hot &lt;194°F" Style="{StaticResource CardSubtitleStyle}" FontSize="11"/>
                    </StackPanel>
                    <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#F44336"/>
                        <TextBlock Text="Critical 194°F+" Style="{StaticResource CardSubtitleStyle}" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- All Sensors Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}" Margin="0,8,0,0"
                        Visibility="{x:Bind ViewModel.HasTemperatures, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ALL SENSORS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                    <Border CornerRadius="4" Padding="8,2" Background="{StaticResource SurfaceLightBrush}"
                            VerticalAlignment="Center">
                        <TextBlock Text="{x:Bind ViewModel.SensorCount, Mode=OneWay}" FontSize="12"
                                   Foreground="{StaticResource CyanAccentBrush}" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Sensors List -->
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Temperatures, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <StackLayout Orientation="Vertical" Spacing="8"/>
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:TemperatureDisplayInfo">
                        <Border Style="{StaticResource CardStyle}" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Sensor Icon -->
                                <Border Grid.Column="0" Style="{StaticResource IconContainerStyle}">
                                    <FontIcon Glyph="{x:Bind Icon}" FontSize="18"
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                </Border>

                                <!-- Sensor Info -->
                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind ShortName}" Style="{StaticResource MenuItemTextStyle}"/>
                                    <TextBlock Text="{x:Bind Name}" Style="{StaticResource CardSubtitleStyle}"
                                               TextTrimming="CharacterEllipsis" FontSize="11"/>
                                </StackPanel>

                                <!-- Temperature -->
                                <TextBlock Grid.Column="2" Text="{x:Bind FormattedTemp}"
                                           FontSize="24" FontWeight="Bold" VerticalAlignment="Center"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,16,0"/>

                                <!-- Status Badge -->
                                <Border Grid.Column="3" CornerRadius="6" Padding="12,6"
                                        Background="{StaticResource SurfaceLightBrush}"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind Status}" FontSize="12" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

            <!-- Thermal Tips Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}" Margin="0,8,0,0"
                        Visibility="{x:Bind ViewModel.HasTemperatures, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="THERMAL TIPS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <Border Style="{StaticResource CardStyle}" Padding="20"
                    Visibility="{x:Bind ViewModel.HasTemperatures, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE9CA;" Foreground="{StaticResource CyanAccentBrush}" FontSize="18"/>
                        <TextBlock Text="Keep CPU temperatures below 176°F for optimal performance and longevity"
                                   Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE71E;" Foreground="{StaticResource CyanAccentBrush}" FontSize="18"/>
                        <TextBlock Text="Clean dust from fans and heatsinks regularly to maintain cooling efficiency"
                                   Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE770;" Foreground="{StaticResource CyanAccentBrush}" FontSize="18"/>
                        <TextBlock Text="Consider upgrading thermal paste if temperatures are consistently high"
                                   Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Footer -->
            <StackPanel HorizontalAlignment="Center" Spacing="8" Margin="0,16,0,0">
                <Image Source="ms-appx:///Assets/Header_Main1.png"
                       Height="16" HorizontalAlignment="Center"
                       Stretch="Uniform" Opacity="0.7"/>
                <TextBlock Text="Powered by Strategia-X Technology"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource PrimaryBrush}"
                           FontSize="12"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
