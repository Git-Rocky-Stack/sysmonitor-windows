<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SysMonitor.App.Views.CpuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:SysMonitor.App.ViewModels"
    Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="0,0,0,24" Spacing="16">

            <!-- Page Header Banner - AMOLED pure black with left header, centered logo -->
            <Border Background="#000000" Padding="24" Margin="-24,-24,-24,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Header text -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="CPU MONITOR" Style="{StaticResource PageHeaderStyle}"
                                   Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Left"/>
                        <TextBlock Text="Real-time processor analytics" Style="{StaticResource PageSubtitleStyle}"
                                   Foreground="#AAFFFFFF" HorizontalAlignment="Left" Margin="0"/>
                    </StackPanel>

                    <!-- Center: STX.1 Home Logo -->
                    <Image Grid.Column="1" Source="ms-appx:///Assets/Home_Logo.png"
                           Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Stretch="Uniform"/>
                </Grid>
            </Border>

            <!-- Overall CPU Usage Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="PROCESSOR USAGE" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Total CPU Usage Card -->
            <Border Style="{StaticResource CardStyle}" Padding="24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- CPU Icon and Name -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <Border Style="{StaticResource IconContainerRedStyle}" Width="64" Height="64" CornerRadius="12">
                            <FontIcon Glyph="&#xE950;" FontSize="32" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                    </StackPanel>

                    <!-- CPU Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0">
                        <TextBlock Text="{x:Bind ViewModel.CpuName, Mode=OneWay}"
                                   Style="{StaticResource MenuItemTextStyle}" FontSize="16"
                                   TextWrapping="Wrap" MaxWidth="400"/>
                        <TextBlock Style="{StaticResource CardSubtitleStyle}" Margin="0,4,0,0">
                            <Run Text="{x:Bind ViewModel.PhysicalCores, Mode=OneWay}"/>
                            <Run Text="Cores |"/>
                            <Run Text="{x:Bind ViewModel.LogicalProcessors, Mode=OneWay}"/>
                            <Run Text="Threads |"/>
                            <Run Text="{x:Bind ViewModel.Architecture, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Usage Display -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <TextBlock Text="TOTAL USAGE" Style="{StaticResource StatLabelStyle}" HorizontalAlignment="Right"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="{x:Bind ViewModel.TotalUsage, Mode=OneWay, Converter={StaticResource PercentConverter}}"
                                       Style="{StaticResource LargeStatValueStyle}" FontSize="48"/>
                            <TextBlock Text="%" VerticalAlignment="Bottom" Margin="2,0,0,12"
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="20"/>
                        </StackPanel>
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="12" Padding="12,4" HorizontalAlignment="Right">
                            <TextBlock Text="{x:Bind ViewModel.TotalUsageStatus, Mode=OneWay}"
                                       Foreground="{StaticResource CyanAccentBrush}" FontSize="12" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Per-Core Usage Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="CORE USAGE" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Core Usage Grid -->
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.CoreUsages, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <UniformGridLayout Orientation="Horizontal" MinItemWidth="200" MinItemHeight="160"
                                       MinColumnSpacing="16" MinRowSpacing="16"/>
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="vm:CoreUsageInfo">
                        <Border Style="{StaticResource StatCardStyle}" Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Core Name with Status Indicator -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{x:Bind CoreName, Mode=OneWay}"
                                               Style="{StaticResource StatLabelStyle}"/>
                                    <Ellipse Grid.Column="1" Width="8" Height="8" VerticalAlignment="Center">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="{x:Bind StatusColor, Mode=OneWay}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>

                                <!-- Usage Value -->
                                <TextBlock Grid.Row="1" Style="{StaticResource StatValueStyle}" Margin="0,8,0,4">
                                    <Run Text="{x:Bind Usage, Mode=OneWay, Converter={StaticResource PercentConverter}}"/>
                                    <Run Text="%" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>

                                <!-- Status Text -->
                                <TextBlock Grid.Row="2" FontSize="11" Margin="0,0,0,8">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="{x:Bind StatusColor, Mode=OneWay}"/>
                                    </TextBlock.Foreground>
                                    <Run Text="{x:Bind Status, Mode=OneWay}"/>
                                </TextBlock>

                                <!-- Progress Bar -->
                                <ProgressBar Grid.Row="3" Value="{x:Bind Usage, Mode=OneWay}"
                                             Maximum="100" Style="{StaticResource RedProgressBarStyle}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

            <!-- Processor Specifications Section -->
            <StackPanel Style="{StaticResource SectionHeaderWithAccentStyle}" Margin="0,8,0,0">
                <Border Style="{StaticResource AccentBarStyle}" Height="20"/>
                <TextBlock Text="SPECIFICATIONS" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
            </StackPanel>

            <!-- Specs Card -->
            <Border Style="{StaticResource CardStyle}">
                <Grid RowSpacing="16" ColumnSpacing="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Manufacturer -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE821;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="MANUFACTURER" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.Manufacturer, Mode=OneWay}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Architecture -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE99A;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="ARCHITECTURE" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.Architecture, Mode=OneWay}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Max Clock Speed -->
                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xEC49;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="MAX CLOCK SPEED" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.MaxClockDisplay, Mode=OneWay}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Physical Cores -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE950;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="PHYSICAL CORES" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.PhysicalCores, Mode=OneWay}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Logical Processors -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE8A5;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="LOGICAL PROCESSORS" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.LogicalProcessors, Mode=OneWay}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Current Clock Speed -->
                    <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xEC49;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="CURRENT CLOCK" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentClockDisplay, Mode=OneWay}"
                                       Foreground="{StaticResource CyanAccentBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- L2 Cache -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE964;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="L2 CACHE" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.CacheL2, Mode=OneWay}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- L3 Cache -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="12">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE964;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="L3 CACHE" Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.CacheL3, Mode=OneWay}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Temperature (if available) -->
                    <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" Spacing="12"
                                Visibility="{x:Bind ViewModel.HasTemperature, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <FontIcon Glyph="&#xE9CA;" FontSize="18" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="TEMPERATURE" Style="{StaticResource StatLabelStyle}"/>
                                <Ellipse Width="8" Height="8" VerticalAlignment="Center">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="{x:Bind ViewModel.TemperatureColor, Mode=OneWay}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock>
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="{x:Bind ViewModel.TemperatureColor, Mode=OneWay}"/>
                                    </TextBlock.Foreground>
                                    <Run Text="{x:Bind ViewModel.Temperature, Mode=OneWay, Converter={StaticResource CelsiusToFahrenheitConverter}}"/>
                                    <Run Text="Â°F"/>
                                </TextBlock>
                                <TextBlock FontSize="11" VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}">
                                    <Run Text="("/>
                                    <Run Text="{x:Bind ViewModel.TemperatureStatus, Mode=OneWay}"/>
                                    <Run Text=")"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Footer -->
            <StackPanel HorizontalAlignment="Center" Spacing="8" Margin="0,16,0,0">
                <Image Source="ms-appx:///Assets/Header_Main1.png"
                       Height="16" HorizontalAlignment="Center"
                       Stretch="Uniform" Opacity="0.7"/>
                <TextBlock Text="Powered by Strategia-X Technology"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource PrimaryBrush}"
                           FontSize="12"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
